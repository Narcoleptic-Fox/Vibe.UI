@namespace Vibe.UI.Components
@inherits Vibe.UI.Base.VibeComponent
@using Vibe.UI.Enums

<div class="@CombinedClass" @attributes="AdditionalAttributes">
    @if (Header != null || CardTitle != null || CardDescription != null)
    {
        <div class="vibe-card-header">
            @if (CardTitle != null)
            {
                <div class="vibe-card-title">
                    @CardTitle
                </div>
            }
            @if (CardDescription != null)
            {
                <div class="vibe-card-description">
                    @CardDescription
                </div>
            }
            @if (Header != null)
            {
                @Header
            }
        </div>
    }

    <div class="vibe-card-content">
        @ChildContent
    </div>

    @if (Footer != null)
    {
        <div class="vibe-card-footer">
            @Footer
        </div>
    }
</div>

@code {
    /// <summary>
    /// Gets or sets the card content
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// Gets or sets the card header (legacy - use CardTitle/CardDescription for composition style)
    /// </summary>
    [Parameter]
    public RenderFragment Header { get; set; }

    /// <summary>
    /// Gets or sets the card footer
    /// </summary>
    [Parameter]
    public RenderFragment Footer { get; set; }

    /// <summary>
    /// Gets or sets the card title (composition style)
    /// </summary>
    [Parameter]
    public RenderFragment CardTitle { get; set; }

    /// <summary>
    /// Gets or sets the card description (composition style)
    /// </summary>
    [Parameter]
    public RenderFragment CardDescription { get; set; }

    /// <summary>
    /// Gets or sets the card variant style.
    /// Determines the visual appearance of the card (default, elevated, outlined, or interactive).
    /// </summary>
    [Parameter]
    public CardVariant Variant { get; set; } = CardVariant.Default;

    /// <summary>
    /// Gets or sets whether the card should use compact spacing
    /// </summary>
    [Parameter]
    public bool Compact { get; set; }

    /// <inheritdoc/>
    protected override string ComponentClass => new ClassBuilder()
        .Add("vibe-card")
        .AddVariant("vibe-card", Variant)
        .AddIf("vibe-card-compact", Compact)
        .Build();
}