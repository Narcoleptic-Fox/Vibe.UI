@namespace Vibe.UI.Components
@inherits Vibe.UI.Base.VibeComponent

<p class="@CombinedClass" id="@Id" @attributes="AdditionalAttributes">
    @ChildContent
</p>

@code {
    /// <summary>
    /// Gets or sets the description text or content for the dialog.
    /// Provides additional context or instructions to the user.
    /// Rendered as a paragraph element.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Id { get; set; }

    [CascadingParameter]
    private DialogContext? Context { get; set; }

    /// <inheritdoc/>
    protected override string ComponentClass => "vibe-dialog-description";

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(Id))
        {
            Id = $"vibe-dialog-description-{Guid.NewGuid():N}";
        }

        Context?.SetDescriptionId(Id);
        base.OnInitialized();
    }
}
