@namespace Vibe.UI.Components
@inherits Vibe.UI.Base.VibeComponent

<h2 class="@CombinedClass" id="@Id" @attributes="AdditionalAttributes">
    @ChildContent
</h2>

@code {
    /// <summary>
    /// Gets or sets the title text or content for the dialog.
    /// Rendered as an h2 element for semantic structure.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Id { get; set; }

    [CascadingParameter]
    private DialogContext? Context { get; set; }

    /// <inheritdoc/>
    protected override string ComponentClass => "vibe-dialog-title";

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(Id))
        {
            Id = $"vibe-dialog-title-{Guid.NewGuid():N}";
        }

        Context?.SetTitleId(Id);
        base.OnInitialized();
    }
}
