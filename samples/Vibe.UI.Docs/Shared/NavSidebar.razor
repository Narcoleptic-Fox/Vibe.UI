@inject NavigationManager Navigation
@implements IDisposable

@*
    NavSidebar - Documentation navigation with icons and improved styling
    Features:
    - Category icons
    - Component count badges
    - Smooth expand/collapse animations
    - Active state highlighting
*@

<div class="nav-sidebar py-4">
    <!-- Getting Started Section -->
    <div class="px-3 mb-4">
        <h3 class="px-3 mb-2 text-xs font-semibold text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
            Getting Started
        </h3>
        <ul class="space-y-0.5">
            @foreach (var item in gettingStartedItems)
            {
                var isActive = IsActive(item.Path);
                <li>
                    <a href="@GetUrl(item.Path)"
                       class="flex items-center gap-3 px-3 py-2 text-sm rounded-lg transition-colors @(isActive ? "bg-brand-teal/10 text-brand-teal font-medium" : "text-zinc-600 dark:text-zinc-400 hover:bg-zinc-100 dark:hover:bg-zinc-800 hover:text-zinc-900 dark:hover:text-zinc-100")">
                        @((MarkupString)item.Icon)
                        <span>@item.Label</span>
                    </a>
                </li>
            }
        </ul>
    </div>

    <!-- Component Categories -->
    <div class="px-3">
        <h3 class="px-3 mb-2 text-xs font-semibold text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">
            Components
        </h3>

        @foreach (var category in categories)
        {
            var isExpanded = expandedCategories.Contains(category.Key);
            var componentCount = category.Value.Count;

            <div class="mb-1">
                <!-- Category Header -->
                <button class="w-full flex items-center justify-between px-3 py-2 text-sm rounded-lg transition-colors hover:bg-zinc-100 dark:hover:bg-zinc-800 group"
                        @onclick="() => ToggleCategory(category.Key)">
                    <span class="flex items-center gap-2.5">
                        <span class="w-5 h-5 flex items-center justify-center text-zinc-400 group-hover:text-zinc-600 dark:group-hover:text-zinc-300">
                            @((MarkupString)GetCategoryIcon(category.Key))
                        </span>
                        <span class="font-medium text-zinc-700 dark:text-zinc-300">@category.Key</span>
                    </span>
                    <span class="flex items-center gap-2">
                        <span class="px-1.5 py-0.5 text-[10px] font-medium rounded-full bg-zinc-100 dark:bg-zinc-800 text-zinc-500">
                            @componentCount
                        </span>
                        <svg class="w-4 h-4 text-zinc-400 transition-transform duration-200 @(isExpanded ? "rotate-180" : "")"
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </span>
                </button>

                <!-- Component Links -->
                @if (isExpanded)
                {
                    <ul class="mt-1 ml-5 pl-2.5 border-l border-zinc-200 dark:border-zinc-700 space-y-0.5 category-content">
                        @foreach (var component in category.Value)
                        {
                            var path = $"components/{component.ToLower()}";
                            var isActive = IsActive(path);
                            <li>
                                <a href="@GetUrl(path)"
                                   class="block px-3 py-1.5 text-sm rounded-md transition-colors @(isActive ? "bg-brand-teal/10 text-brand-teal font-medium" : "text-zinc-500 dark:text-zinc-400 hover:bg-zinc-100 dark:hover:bg-zinc-800 hover:text-zinc-900 dark:hover:text-zinc-100")">
                                    @component
                                </a>
                            </li>
                        }
                    </ul>
                }
            </div>
        }
    </div>
</div>

<style>
    .category-content {
        animation: expandIn 0.2s ease-out;
    }

    @@keyframes expandIn {
        from {
            opacity: 0;
            transform: translateY(-4px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

