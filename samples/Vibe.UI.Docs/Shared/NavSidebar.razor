    protected override void OnInitialized()
    {
        Navigation.LocationChanged += OnLocationChanged;
        ExpandCurrentCategory();
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        ExpandCurrentCategory();
        StateHasChanged();
    }

    private void ExpandCurrentCategory()
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath.ToLower();
        foreach (var category in categories.Keys)
        {
            if (categories[category].Any(c => currentPath.Contains($"/components/{c.ToLower()}")))
            {
                expandedCategories.Add(category);
            }
        }
    }

    private void ToggleCategory(string category)
    {
        if (expandedCategories.Contains(category))
            expandedCategories.Remove(category);
        else
            expandedCategories.Add(category);
    }

    private string GetCategoryIcon(string category)
    {
        return categoryIcons.TryGetValue(category, out var icon) ? icon : categoryIcons["Utility"];
    }

    private string GetUrl(string path)
    {
        return $"{Navigation.BaseUri}{path}";
    }

    private bool IsActive(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath.TrimEnd('/').ToLower();
        var targetPath = $"{new Uri(Navigation.BaseUri).AbsolutePath}{path}".TrimEnd('/').ToLower();
        return currentPath.Equals(targetPath, StringComparison.OrdinalIgnoreCase);
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
