{
  "name": "vibe-ui-docs",
  "version": "1.0.0",
  "description": "TypeScript source for Vibe.UI Documentation site",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && npm run deploy:shiki && npm run deploy:docs",
    "deploy:shiki": "copyfiles -f dist/shiki-interop.js ../wwwroot/js/",
    "deploy:docs": "copyfiles -f dist/docs.js ../wwwroot/js/",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "vibe-ui",
    "docs",
    "shiki",
    "blazor"
  ],
  "author": "Vibe.UI Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.4",
    "copyfiles": "^2.4.1",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {}
}
