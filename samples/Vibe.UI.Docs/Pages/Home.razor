@page "/"
@using Vibe.UI.Components

<PageTitle>Vibe.UI - Modern Blazor Component Library</PageTitle>

<div class="landing-page">
    <!-- Hero Section -->
    <section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
        <!-- Animated Background -->
        <div class="absolute inset-0">
            <!-- Gradient Orbs -->
            <div class="gradient-orb gradient-orb-teal w-[600px] h-[600px] absolute -top-40 -left-40 animate-float opacity-40"></div>
            <div class="gradient-orb gradient-orb-lilac w-[500px] h-[500px] absolute -bottom-20 -right-20 animate-float-delayed opacity-40"></div>
            <div class="gradient-orb gradient-orb-teal w-[300px] h-[300px] absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 animate-float opacity-20"></div>

            <!-- Grid Pattern -->
            <div class="absolute inset-0 bg-grid-pattern"></div>

            <!-- Radial gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-white/50 to-white dark:via-zinc-950/50 dark:to-zinc-950"></div>
        </div>

        <!-- Hero Content -->
        <div class="relative z-10 max-w-4xl mx-auto text-center px-4 py-20 stagger-children">
            <!-- Badge -->
            <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-zinc-100 dark:bg-zinc-800/80 border border-zinc-200 dark:border-zinc-700 text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-8 backdrop-blur-sm" style="--stagger-index: 0">
                <span class="w-2 h-2 rounded-full bg-green-500 pulse-dot"></span>
                <span>shadcn/ui for Blazor</span>
            </div>

            <!-- Title -->
            <h1 class="text-5xl sm:text-6xl md:text-7xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100 mb-6" style="--stagger-index: 1">
                Build <GradientText>beautiful</GradientText><br class="hidden sm:block" />
                Blazor apps faster
            </h1>

            <!-- Subtitle -->
            <p class="text-lg sm:text-xl text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto mb-10 leading-relaxed" style="--stagger-index: 2">
                A collection of beautifully designed, accessible components.
                Copy and paste into your apps. Open source. Free forever.
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12" style="--stagger-index: 3">
                <a href="@GetUrl("getting-started")"
                   class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-zinc-900 dark:bg-zinc-100 text-white dark:text-zinc-900 font-medium hover:bg-zinc-800 dark:hover:bg-zinc-200 transition-colors press-effect">
                    Get Started
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </a>
                <div class="flex items-center gap-2 px-4 py-2.5 rounded-lg bg-zinc-100 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700">
                    <code class="text-sm font-mono text-zinc-600 dark:text-zinc-400">dotnet tool install -g Vibe.UI.CLI</code>
                    <CopyButton Code="dotnet tool install -g Vibe.UI.CLI" ShowText="false" Variant="CopyButton.CopyButtonVariant.Ghost" />
                </div>
            </div>

            <!-- Stats -->
            <div class="flex flex-wrap items-center justify-center gap-8 sm:gap-12" style="--stagger-index: 4">
                <div class="text-center">
                    <div class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100">93+</div>
                    <div class="text-sm text-zinc-500 dark:text-zinc-400">Components</div>
                </div>
                <div class="hidden sm:block w-px h-12 bg-zinc-200 dark:bg-zinc-800"></div>
                <div class="text-center">
                    <div class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100">11</div>
                    <div class="text-sm text-zinc-500 dark:text-zinc-400">Categories</div>
                </div>
                <div class="hidden sm:block w-px h-12 bg-zinc-200 dark:bg-zinc-800"></div>
                <div class="text-center">
                    <div class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100">100%</div>
                    <div class="text-sm text-zinc-500 dark:text-zinc-400">Open Source</div>
                </div>
            </div>
        </div>

        <!-- Scroll indicator -->
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
            <svg class="w-6 h-6 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
    </section>

    <!-- Component Preview Section -->
    <section class="py-20 px-4 bg-zinc-50 dark:bg-zinc-900/50">
        <div class="max-w-5xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
                    See it in action
                </h2>
                <p class="text-zinc-600 dark:text-zinc-400">
                    Beautiful, accessible components right out of the box
                </p>
            </div>

            <!-- Preview Card -->
            <div class="rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 shadow-xl overflow-hidden">
                <!-- Preview Header -->
                <div class="flex items-center justify-between px-4 py-3 border-b border-zinc-200 dark:border-zinc-800 bg-zinc-50 dark:bg-zinc-800/50">
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 rounded-full bg-red-500"></div>
                        <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                        <div class="w-3 h-3 rounded-full bg-green-500"></div>
                    </div>
                    <span class="text-xs text-zinc-500">Button Component</span>
                    <div class="w-16"></div>
                </div>

                <!-- Preview Content -->
                <div class="p-8 flex flex-wrap items-center justify-center gap-4">
                    <Button Variant="ButtonVariant.Primary">Primary</Button>
                    <Button Variant="ButtonVariant.Secondary">Secondary</Button>
                    <Button Variant="ButtonVariant.Outline">Outline</Button>
                    <Button Variant="ButtonVariant.Ghost">Ghost</Button>
                    <Button Variant="ButtonVariant.Destructive">Destructive</Button>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 px-4">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-16">
                <span class="inline-block px-3 py-1 rounded-full bg-brand-teal/10 text-brand-teal text-sm font-medium mb-4">
                    Features
                </span>
                <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
                    Everything you need
                </h2>
                <p class="text-lg text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto">
                    Built for modern Blazor development with developer experience in mind
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <FeatureCard Icon="components" Title="93+ Components"
                             Description="Production-ready components covering every use case from buttons to data tables." />

                <FeatureCard Icon="copy" Title="Copy, Don't Install"
                             Description="Own your code. Copy components directly into your project and customize freely." />

                <FeatureCard Icon="palette" Title="Themeable"
                             Description="CSS variables for everything. Light and dark mode with runtime switching." />

                <FeatureCard Icon="terminal" Title="CLI-First"
                             Description="Install with 'vibe add button'. No config files needed. Just works." />

                <FeatureCard Icon="code" Title="Pure C#"
                             Description="Strongly typed with full IntelliSense. No JavaScript required for most components." />

                <FeatureCard Icon="accessibility" Title="Accessible"
                             Description="WCAG 2.1 compliant. Keyboard navigation and screen reader support built-in." />
            </div>
        </div>
    </section>

    <!-- Terminal Section -->
    <section class="py-20 px-4 bg-zinc-50 dark:bg-zinc-900/50">
        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
                    Get started in seconds
                </h2>
                <p class="text-zinc-600 dark:text-zinc-400">
                    Three commands to add your first component
                </p>
            </div>

            <!-- Terminal Window -->
            <div class="rounded-xl border border-zinc-200 dark:border-zinc-700 bg-zinc-900 shadow-2xl overflow-hidden">
                <!-- Terminal Header -->
                <div class="flex items-center gap-2 px-4 py-3 bg-zinc-800 border-b border-zinc-700">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                    <span class="ml-4 text-xs text-zinc-400 font-mono">Terminal</span>
                </div>

                <!-- Terminal Body -->
                <div class="p-6 font-mono text-sm">
                    <div class="flex items-center gap-2 mb-3">
                        <span class="text-green-400">$</span>
                        <span class="text-zinc-300">dotnet tool install -g Vibe.UI.CLI</span>
                    </div>
                    <div class="text-zinc-500 mb-4">Installing Vibe.UI.CLI...</div>

                    <div class="flex items-center gap-2 mb-3">
                        <span class="text-green-400">$</span>
                        <span class="text-zinc-300">vibe init</span>
                    </div>
                    <div class="text-blue-400 mb-4">✓ Vibe.UI initialized successfully!</div>

                    <div class="flex items-center gap-2 mb-3">
                        <span class="text-green-400">$</span>
                        <span class="text-zinc-300">vibe add button card input dialog</span>
                    </div>
                    <div class="text-green-400">✓ Added 4 components to your project</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Popular Components Section -->
    <section class="py-20 px-4">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
                    Popular components
                </h2>
                <p class="text-zinc-600 dark:text-zinc-400">
                    Start with these frequently used components
                </p>
            </div>

            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
                @foreach (var component in PopularComponents)
                {
                    <a href="@GetUrl($"components/{component.ToLower()}")"
                       class="group p-4 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 hover:border-brand-teal dark:hover:border-brand-teal hover:shadow-lg transition-all duration-200">
                        <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-brand-teal/10 to-brand-lilac/10 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                            <span class="text-sm font-bold text-brand-teal">@component[0]</span>
                        </div>
                        <span class="text-sm font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal transition-colors">@component</span>
                    </a>
                }
            </div>

            <div class="text-center mt-8">
                <a href="@GetUrl("components")"
                   class="inline-flex items-center gap-2 text-brand-teal hover:underline font-medium">
                    View all components
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-4">
        <div class="max-w-4xl mx-auto text-center">
            <div class="relative rounded-2xl bg-gradient-to-br from-brand-teal to-brand-lilac p-px overflow-hidden">
                <div class="rounded-2xl bg-white dark:bg-zinc-900 px-8 py-16 sm:px-16">
                    <h2 class="text-3xl sm:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
                        Ready to build something <GradientText>beautiful</GradientText>?
                    </h2>
                    <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-8 max-w-xl mx-auto">
                        Start building with Vibe.UI today. It's free, open source, and designed for Blazor developers.
                    </p>

                    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                        <a href="@GetUrl("getting-started")"
                           class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-zinc-900 dark:bg-zinc-100 text-white dark:text-zinc-900 font-medium hover:bg-zinc-800 dark:hover:bg-zinc-200 transition-colors press-effect">
                            Get Started
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </a>
                        <a href="https://github.com/AcademyKit/Vibe.UI"
                           target="_blank"
                           rel="noopener noreferrer"
                           class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-zinc-200 dark:border-zinc-700 text-zinc-700 dark:text-zinc-300 font-medium hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                            View on GitHub
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-4 border-t border-zinc-200 dark:border-zinc-800">
        <div class="max-w-6xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4">
            <div class="flex items-center gap-2 text-sm text-zinc-500 dark:text-zinc-400">
                <span>Built with</span>
                <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
                <span>by the Vibe.UI team</span>
            </div>
            <div class="flex items-center gap-6">
                <a href="https://github.com/AcademyKit/Vibe.UI" target="_blank" rel="noopener noreferrer" class="text-sm text-zinc-500 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors">
                    GitHub
                </a>
                <a href="@GetUrl("getting-started")" class="text-sm text-zinc-500 hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors">
                    Documentation
                </a>
            </div>
        </div>
    </footer>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private List<string> PopularComponents { get; } = new()
    {
        "Button", "Card", "Input", "Dialog", "Alert", "Tabs",
        "Select", "Checkbox", "Toast", "Avatar", "Badge", "Progress"
    };

    private string GetUrl(string path)
    {
        return $"{Navigation.BaseUri}{path}";
    }
}
