@page "/"
@using Vibe.UI.Components

<PageTitle>Vibe.UI - Modern Blazor Component Library</PageTitle>

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="hero-gradient-1"></div>
            <div class="hero-gradient-2"></div>
            <div class="hero-gradient-3"></div>
        </div>

        <div class="hero-content">
            <div class="hero-badge">
                <span class="badge-icon">⚡</span>
                <span>shadcn/ui for Blazor</span>
            </div>

            <h1 class="hero-title">
                Build beautiful<br />
                Blazor apps faster
            </h1>

            <p class="hero-subtitle">
                Copy-paste 93+ accessible components.<br />
                Customize everything. Own your code.
            </p>

            <div class="hero-actions">
                <a href="@GetUrl("getting-started")" class="hero-btn-primary">
                    Get Started
                    <span class="btn-arrow">→</span>
                </a>
                <button class="hero-btn-secondary" onclick="copyInstallCommand()">
                    <span class="copy-icon">📋</span>
                    <span>dotnet tool install -g Vibe.UI.CLI</span>
                </button>
            </div>

            <!-- Live Component Preview -->
            <div class="hero-preview">
                <div class="preview-window">
                    <div class="preview-tabs">
                        <button class="tab active">Preview</button>
                        <button class="tab">Code</button>
                        <button class="theme-toggle" onclick="togglePreviewTheme()">🌙</button>
                    </div>
                    <div class="preview-content">
                        <Button Variant="Button.ButtonVariant.Primary">Primary</Button>
                        <Button Variant="Button.ButtonVariant.Secondary">Secondary</Button>
                        <Button Variant="Button.ButtonVariant.Outline">Outline</Button>
                        <Button Variant="Button.ButtonVariant.Ghost">Ghost</Button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Start Section -->
    <section class="section">
        <h2>Quick Start</h2>
        <p>Install the CLI tool and start adding components to your Blazor project:</p>
        <CodeBlock Code="@QuickStartCode" Language="bash" />
    </section>

    <!-- Features Grid -->
    <section class="features-section">
        <div class="section-header">
            <h2>Why Vibe.UI?</h2>
            <p>Everything you need to build modern Blazor applications</p>
        </div>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <span>🎨</span>
                </div>
                <h3>93+ Components</h3>
                <p>Production-ready components for every use case</p>
                <a href="@GetUrl("components/button")" class="feature-link">
                    Browse components →
                </a>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <span>📋</span>
                </div>
                <h3>Copy, Not Install</h3>
                <p>Own your code. Customize everything.</p>
                <a href="@GetUrl("getting-started")" class="feature-link">
                    Learn about CLI →
                </a>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <span>🎭</span>
                </div>
                <h3>Built-in Theming</h3>
                <p>Light/dark mode with runtime switching</p>
                <a href="@GetUrl("theming")" class="feature-link">
                    Explore themes →
                </a>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <span>📊</span>
                </div>
                <h3>Chart.js Integration</h3>
                <p>Beautiful charts and data visualization</p>
                <a href="@GetUrl("components/chart")" class="feature-link">
                    View charts →
                </a>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <span>✓</span>
                </div>
                <h3>Form Validation</h3>
                <p>Built-in validation helpers for forms</p>
                <a href="@GetUrl("components/form")" class="feature-link">
                    Learn more →
                </a>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <span>♿</span>
                </div>
                <h3>ARIA Compliant</h3>
                <p>Accessible to all users by default</p>
                <a href="@GetUrl("accessibility")" class="feature-link">
                    Accessibility →
                </a>
            </div>
        </div>
    </section>

    <!-- Popular Components Showcase -->
    <section class="section">
        <h2>Popular Components</h2>
        <div class="component-showcase">
            <a href="@GetUrl("components/button")" class="showcase-item">Button</a>
            <a href="@GetUrl("components/card")" class="showcase-item">Card</a>
            <a href="@GetUrl("components/input")" class="showcase-item">Input</a>
            <a href="@GetUrl("components/modal")" class="showcase-item">Modal</a>
            <a href="@GetUrl("components/datepicker")" class="showcase-item">DatePicker</a>
            <a href="@GetUrl("components/chart")" class="showcase-item">Chart</a>
        </div>
    </section>

    <!-- Installation Options -->
    <section class="section">
        <h2>Installation Options</h2>
        <div class="installation-options">
            <div class="option-card">
                <h3>CLI (Recommended)</h3>
                <p>Full source code control - customize any component</p>
                <CodeBlock Code="@CliInstallCode" Language="bash" />
            </div>
            <div class="option-card">
                <h3>NuGet Package</h3>
                <p>Traditional package reference for quick setup</p>
                <CodeBlock Code="@PackageInstallCode" Language="bash" />
            </div>
        </div>
    </section>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private string QuickStartCode => @"# Install CLI tool
dotnet tool install -g Vibe.UI.CLI

# Initialize in your project
cd MyBlazorApp
vibe init

# Add components
vibe add button
vibe add card
vibe add input";

    private string CliInstallCode => @"dotnet tool install -g Vibe.UI.CLI
vibe init
vibe add button";

    private string PackageInstallCode => @"dotnet add package Vibe.UI";

    private string GetUrl(string path)
    {
        return $"{Navigation.BaseUri}{path}";
    }
}
