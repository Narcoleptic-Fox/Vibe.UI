@page "/components/kanbanboard"
@using Vibe.UI.Components
@using static Vibe.UI.Components.KanbanBoard

<PageTitle>KanbanBoard - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">KanbanBoard</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">KanbanBoard</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            A kanban board component for visualizing and managing workflow with draggable cards across multiple columns.
        </p>
    </header>

    <!-- Preview Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
            <KanbanBoard Columns="kanbanColumns" AllowDragDrop="false" AllowAddCard="false" />
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Kanban Board -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Kanban Board</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Create a basic kanban board with columns and cards.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- Custom Card Template -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Custom Card Template</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Customize card appearance with rich templates including badges and avatars.
            </p>
            <CodeBlock Code="@CustomCardCode" Language="razor" />
        </div>

        <!-- With Card Limits -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Card Limits</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Set maximum card limits per column to enforce workflow constraints.
            </p>
            <CodeBlock Code="@LimitsCode" Language="razor" />
        </div>

        <!-- With Swimlanes -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Swimlanes</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Organize work across multiple horizontal swimlanes.
            </p>
            <CodeBlock Code="@SwimlanesCode" Language="razor" />
        </div>

        <!-- Full Example -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Full Example</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Complete example with all features including custom headers and card actions.
            </p>
            <CodeBlock Code="@FullCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Columns</td>
                            <td class="py-3 px-4"><TypeBadge Type="IEnumerable<KanbanColumn>" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Collection of board columns</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Cards</td>
                            <td class="py-3 px-4"><TypeBadge Type="IEnumerable<TCard>" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Collection of cards to display</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">CardTemplate</td>
                            <td class="py-3 px-4"><TypeBadge Type="RenderFragment<TCard>" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Template for rendering cards</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ColumnHeaderTemplate</td>
                            <td class="py-3 px-4"><TypeBadge Type="RenderFragment<KanbanColumn>" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Custom column header template</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">AllowReorder</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">true</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Allow card reordering within columns</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ShowCardCount</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">true</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Show card count in column headers</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Events -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Events</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnCardMoved</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback<CardMovedEventArgs<TCard>>" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when card is moved to different column</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnCardReordered</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback<CardReorderedEventArgs<TCard>>" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when card is reordered within column</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnCardClick</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback<TCard>" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when card is clicked</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnColumnClick</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback<KanbanColumn>" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when column header is clicked</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the KanbanBoard component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add kanbanboard" Language="bash" />
    </section>

