@page "/components/avatar"
@using Vibe.UI.Components

<PageTitle>Avatar - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">Avatar</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">Avatar</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            An image element with fallback for displaying user profile pictures or identifiers.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="flex items-center gap-6 flex-wrap p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
            <Avatar ImageUrl="https://i.pravatar.cc/150?img=1" Size="32" />
            <Avatar ImageUrl="https://i.pravatar.cc/150?img=2" Size="40" />
            <Avatar ImageUrl="https://i.pravatar.cc/150?img=3" Size="48" />
            <Avatar ImageUrl="https://i.pravatar.cc/150?img=4" Size="64" />
            <Avatar Initials="JD" Size="48" />
            <Avatar Initials="AS" Size="48" />
            <Avatar FallbackIcon="ðŸ‘¤" Size="48" />
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Usage -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Usage</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Display a user avatar with an image source.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Avatar Src="https://i.pravatar.cc/150?img=1" Alt="User Avatar" />
            </div>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- Sizes -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Sizes</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Avatars come in multiple sizes to fit different contexts.
            </p>
            <div class="flex items-center gap-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Avatar Size="24" Src="https://i.pravatar.cc/150?img=2" />
                <Avatar Size="32" Src="https://i.pravatar.cc/150?img=3" />
                <Avatar Size="48" Src="https://i.pravatar.cc/150?img=4" />
                <Avatar Size="64" Src="https://i.pravatar.cc/150?img=5" />
            </div>
            <CodeBlock Code="@SizesCode" Language="razor" />
        </div>

        <!-- With Initials Fallback -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Initials Fallback</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Display user initials when no image is available.
            </p>
            <div class="flex items-center gap-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Avatar Initials="JD" />
                <Avatar Initials="AS" />
                <Avatar Initials="MK" />
            </div>
            <CodeBlock Code="@InitialsCode" Language="razor" />
        </div>

        <!-- With Icon Fallback -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Icon Fallback</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use an icon as fallback content when no image or initials are provided.
            </p>
            <div class="flex items-center gap-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Avatar>
                    <span class="icon">ðŸ‘¤</span>
                </Avatar>
            </div>
            <CodeBlock Code="@IconCode" Language="razor" />
        </div>

        <!-- Avatar Group -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Avatar Group</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Group multiple avatars together with a maximum display count.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="flex items-center -space-x-3">
                    <Avatar Src="https://i.pravatar.cc/150?img=1" />
                    <Avatar Src="https://i.pravatar.cc/150?img=2" />
                    <Avatar Src="https://i.pravatar.cc/150?img=3" />
                    <Avatar Src="https://i.pravatar.cc/150?img=4" />
                    <Avatar Src="https://i.pravatar.cc/150?img=5" />
                </div>
            </div>
            <CodeBlock Code="@GroupCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Src</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Image source URL</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Alt</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Alt text for the image</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Size</td>
                            <td class="py-3 px-4"><TypeBadge Type="AvatarSize" /></td>
                            <td class="py-3 px-4 text-zinc-500">Medium</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Size of the avatar</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Initials</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Initials to display if image fails to load</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Shape</td>
                            <td class="py-3 px-4"><TypeBadge Type="AvatarShape" /></td>
                            <td class="py-3 px-4 text-zinc-500">Circle</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Shape of the avatar (Circle, Square, Rounded)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">StatusIndicator</td>
                            <td class="py-3 px-4"><TypeBadge Type="AvatarStatus" /></td>
                            <td class="py-3 px-4 text-zinc-500">None</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Status indicator (None, Online, Offline, Away, Busy)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the Avatar component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add avatar" Language="bash" />
    </section>

    <!-- Accessibility -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Accessibility</h2>
        <div class="prose prose-zinc dark:prose-invert max-w-none">
            <ul class="space-y-2 text-zinc-600 dark:text-zinc-400">
                <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Uses semantic <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">&lt;img&gt;</code> with proper alt text
                </li>
                <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Fallback content is screen reader accessible
                </li>
                <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Status indicators have appropriate ARIA labels
                </li>
                <li class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Proper contrast for text fallbacks
                </li>
            </ul>
        </div>
    </section>

    <!-- Related Components -->
    <section>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Related</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/components/badge" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Badge</h4>
                <p class="text-sm text-zinc-500">Status and notification badges</p>
            </a>
            <a href="/components/card" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Card</h4>
                <p class="text-sm text-zinc-500">Container for content and actions</p>
            </a>
            <a href="/components/userprofile" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">UserProfile</h4>
                <p class="text-sm text-zinc-500">Complete user profile display</p>
            </a>
        </div>
    </section>
</div>

