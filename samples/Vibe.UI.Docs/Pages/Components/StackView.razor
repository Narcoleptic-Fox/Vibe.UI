    private string SpacingCode => @"<!-- Tight spacing -->
<Stack Spacing=""0.25rem"">
    <div>Tight 1</div>
    <div>Tight 2</div>
</Stack>

<!-- Wide spacing -->
<Stack Spacing=""2rem"">
    <div>Wide 1</div>
    <div>Wide 2</div>
</Stack>";
