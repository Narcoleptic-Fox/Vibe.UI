@page "/components/stack"

<PageTitle>Stack - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">Stack</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">Stack</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            A flexbox-based layout component for arranging children in a vertical or horizontal stack with consistent spacing and alignment control.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900">
            <Stack Direction="Stack.StackDirection.Vertical" Spacing="1rem">
                <Card>
                    <div style="padding: 1.5rem; text-align: center;">First Item</div>
                </Card>
                <Card>
                    <div style="padding: 1.5rem; text-align: center;">Second Item</div>
                </Card>
                <Card>
                    <div style="padding: 1.5rem; text-align: center;">Third Item</div>
                </Card>
            </Stack>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Vertical Stack -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Vertical Stack</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Stack items vertically with consistent spacing.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Stack Direction="Stack.StackDirection.Vertical" Spacing="0.75rem">
                    @for (int i = 1; i <= 4; i++)
                    {
                        var index = i;
                        <div style="padding: 1rem; background: var(--vibe-muted); border-radius: var(--vibe-radius); text-align: center;">
                            Item @index
                        </div>
                    }
                </Stack>
            </div>
            <CodeBlock Code="@VerticalCode" Language="razor" />
        </div>

        <!-- Horizontal Stack -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Horizontal Stack</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Arrange items in a horizontal row.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Stack Direction="Stack.StackDirection.Horizontal" Spacing="1rem">
                    <Button>Button 1</Button>
                    <Button Variant="ButtonVariant.Outline">Button 2</Button>
                    <Button Variant="ButtonVariant.Ghost">Button 3</Button>
                </Stack>
            </div>
            <CodeBlock Code="@HorizontalCode" Language="razor" />
        </div>

        <!-- Alignment Control -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Alignment Control</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Control alignment on both axes.
            </p>
            <div class="space-y-6 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div>
                    <p class="mb-2 font-medium text-sm text-zinc-700 dark:text-zinc-300">Center Aligned:</p>
                    <Stack Direction="Stack.StackDirection.Horizontal"
                           Align="Stack.StackAlign.Center"
                           Spacing="1rem">
                        <div style="padding: 2rem 1rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Tall</div>
                        <div style="padding: 1rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Short</div>
                        <div style="padding: 1.5rem 1rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Medium</div>
                    </Stack>
                </div>
                <div>
                    <p class="mb-2 font-medium text-sm text-zinc-700 dark:text-zinc-300">Space Between:</p>
                    <Stack Direction="Stack.StackDirection.Horizontal"
                           Justify="Stack.StackJustify.SpaceBetween">
                        <div style="padding: 1rem; background: var(--vibe-primary); color: var(--vibe-primary-foreground); border-radius: var(--vibe-radius);">Start</div>
                        <div style="padding: 1rem; background: var(--vibe-accent); color: var(--vibe-accent-foreground); border-radius: var(--vibe-radius);">End</div>
                    </Stack>
                </div>
            </div>
            <CodeBlock Code="@AlignmentCode" Language="razor" />
        </div>

        <!-- Wrapping Stack -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Wrapping Stack</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Allow items to wrap to the next line.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Stack Direction="Stack.StackDirection.Horizontal" Wrap="true" Spacing="0.5rem">
                    @foreach (var color in new[] { "Primary", "Secondary", "Accent", "Success", "Warning", "Destructive" })
                    {
                        <Badge>@color</Badge>
                    }
                </Stack>
            </div>
            <CodeBlock Code="@WrapCode" Language="razor" />
        </div>

        <!-- Custom Spacing -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Custom Spacing</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Control the gap between items.
            </p>
            <div class="space-y-6 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div>
                    <p class="mb-2 font-medium text-sm text-zinc-700 dark:text-zinc-300">Tight Spacing (0.25rem):</p>
                    <Stack Spacing="0.25rem">
                        <div style="padding: 0.5rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Item 1</div>
                        <div style="padding: 0.5rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Item 2</div>
                        <div style="padding: 0.5rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Item 3</div>
                    </Stack>
                </div>
                <div>
                    <p class="mb-2 font-medium text-sm text-zinc-700 dark:text-zinc-300">Wide Spacing (2rem):</p>
                    <Stack Spacing="2rem">
                        <div style="padding: 0.5rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Item 1</div>
                        <div style="padding: 0.5rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Item 2</div>
                        <div style="padding: 0.5rem; background: var(--vibe-muted); border-radius: var(--vibe-radius);">Item 3</div>
                    </Stack>
                </div>
            </div>
            <CodeBlock Code="@SpacingCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Direction</td>
                            <td class="py-3 px-4"><TypeBadge Type="StackDirection" /></td>
                            <td class="py-3 px-4 text-zinc-500">Vertical</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Stack direction (Vertical or Horizontal)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Spacing</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">"1rem"</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Space between items (CSS value)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Align</td>
                            <td class="py-3 px-4"><TypeBadge Type="StackAlign" /></td>
                            <td class="py-3 px-4 text-zinc-500">Stretch</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Cross-axis alignment</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Justify</td>
                            <td class="py-3 px-4"><TypeBadge Type="StackJustify" /></td>
                            <td class="py-3 px-4 text-zinc-500">Start</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Main-axis alignment</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Wrap</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">false</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Whether items can wrap to next line</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ChildContent</td>
                            <td class="py-3 px-4"><TypeBadge Type="RenderFragment" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Stack items</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Enum Values -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">StackAlign Values</h3>
            <div class="space-y-2 text-sm text-zinc-600 dark:text-zinc-400 mb-6">
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">Start</code>
                    <span>— Align items to the start of cross-axis</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">Center</code>
                    <span>— Center items on cross-axis</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">End</code>
                    <span>— Align items to the end of cross-axis</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">Stretch</code>
                    <span>— Stretch items to fill cross-axis (default)</span>
                </div>
            </div>

            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">StackJustify Values</h3>
            <div class="space-y-2 text-sm text-zinc-600 dark:text-zinc-400">
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">Start</code>
                    <span>— Items at start of main-axis (default)</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">Center</code>
                    <span>— Items centered on main-axis</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">End</code>
                    <span>— Items at end of main-axis</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">SpaceBetween</code>
                    <span>— Even spacing between items</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">SpaceAround</code>
                    <span>— Even spacing around items</span>
                </div>
                <div class="flex items-start gap-2">
                    <code class="text-zinc-900 dark:text-zinc-100 bg-zinc-100 dark:bg-zinc-800 px-2 py-0.5 rounded">SpaceEvenly</code>
                    <span>— Equal spacing everywhere</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the Stack component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add stack" Language="bash" />
    </section>

    <!-- Accessibility -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Accessibility</h2>
        <ul class="space-y-2 text-zinc-600 dark:text-zinc-400">
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Maintains semantic order of content for screen readers
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                No impact on keyboard navigation
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Flexbox-based for responsive and flexible layouts
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Visual order matches DOM order
            </li>
        </ul>
    </section>

    <!-- Related Components -->
    <section>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Related</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/components/grid" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Grid</h4>
                <p class="text-sm text-zinc-500">CSS Grid layout system</p>
            </a>
            <a href="/components/container" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Container</h4>
                <p class="text-sm text-zinc-500">Centered content container</p>
            </a>
            <a href="/components/divider" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Divider</h4>
                <p class="text-sm text-zinc-500">Visual content separator</p>
            </a>
        </div>
    </section>
</div>

@code {
    private string VerticalCode => @"<Stack Direction=""Stack.StackDirection.Vertical"" Spacing=""1rem"">
    <Card>Item 1</Card>
    <Card>Item 2</Card>
    <Card>Item 3</Card>
</Stack>";

    private string HorizontalCode => @"<Stack Direction=""Stack.StackDirection.Horizontal"" Spacing=""1rem"">
    <Button>Button 1</Button>
    <Button>Button 2</Button>
    <Button>Button 3</Button>
</Stack>";

    private string AlignmentCode => @"<!-- Center aligned cross-axis -->
<Stack Direction=""Stack.StackDirection.Horizontal""
