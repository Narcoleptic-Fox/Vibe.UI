@page "/components/timepicker"

<PageTitle>TimePicker - Vibe.UI</PageTitle>

<ComponentPage ComponentName="TimePicker"
               Category="DateTime"
               Description="An input component for selecting time values with a dropdown interface and keyboard support."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo" style="display: flex; flex-direction: column; gap: 1.5rem; max-width: 400px; margin: 0 auto;">
            <Alert Variant="AlertVariant.Warning">
                <strong>Note:</strong> The TimePicker component is not yet implemented. This is a placeholder for future development.
            </Alert>
            <p style="text-align: center; color: var(--text-muted);">
                Component preview will be available once the TimePicker component is implemented.
            </p>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic TimePicker</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>12-Hour Format</h3>
            <CodeBlock Code="@TwelveHourCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Time Range Limits</h3>
            <CodeBlock Code="@LimitsCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Custom Step Intervals</h3>
            <CodeBlock Code="@StepCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Appointment Scheduler</h3>
            <CodeBlock Code="@SchedulerCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Value</code></td>
                    <td>TimeSpan?</td>
                    <td>null</td>
                    <td>Selected time value</td>
                </tr>
                <tr>
                    <td><code>Format</code></td>
                    <td>TimeFormat</td>
                    <td>TwentyFourHour</td>
                    <td>Time format (12-hour or 24-hour)</td>
                </tr>
                <tr>
                    <td><code>MinTime</code></td>
                    <td>TimeSpan?</td>
                    <td>null</td>
                    <td>Minimum selectable time</td>
                </tr>
                <tr>
                    <td><code>MaxTime</code></td>
                    <td>TimeSpan?</td>
                    <td>null</td>
                    <td>Maximum selectable time</td>
                </tr>
                <tr>
                    <td><code>StepMinutes</code></td>
                    <td>int</td>
                    <td>15</td>
                    <td>Minute interval for time options</td>
                </tr>
                <tr>
                    <td><code>Placeholder</code></td>
                    <td>string</td>
                    <td>"Select time"</td>
                    <td>Placeholder text when empty</td>
                </tr>
                <tr>
                    <td><code>Disabled</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Disable the input</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>ValueChanged</code></td>
                    <td>EventCallback&lt;TimeSpan?&gt;</td>
                    <td>Callback when time is selected</td>
                </tr>
                <tr>
                    <td><code>OnOpen</code></td>
                    <td>EventCallback</td>
                    <td>Callback when dropdown opens</td>
                </tr>
                <tr>
                    <td><code>OnClose</code></td>
                    <td>EventCallback</td>
                    <td>Callback when dropdown closes</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>Uses <code>role="combobox"</code> pattern</li>
            <li>Keyboard accessible with Tab and Arrow keys</li>
            <li>Supports text input with validation</li>
            <li>Screen reader announces selected time</li>
            <li>Clear focus indicators</li>
            <li>Escape key closes dropdown</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

