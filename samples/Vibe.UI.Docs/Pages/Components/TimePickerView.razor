    private string SchedulerCode => @"<EditForm Model=""@appointment"" OnValidSubmit=""@ScheduleAppointment"">
    <DataAnnotationsValidator />

    <FormField Label=""Patient Name"">
        <Input @bind-Value=""@appointment.PatientName"" />
        <ValidationMessage For=""@(() => appointment.PatientName)"" />
    </FormField>

    <div class=""form-row"">
        <FormField Label=""Appointment Date"">
            <DatePicker @bind-Value=""@appointment.Date""
                        MinDate=""@DateTime.Today"" />
            <ValidationMessage For=""@(() => appointment.Date)"" />
        </FormField>

        <FormField Label=""Time"">
            <TimePicker @bind-Value=""@appointment.Time""
                        MinTime=""@TimeSpan.FromHours(8)""
                        MaxTime=""@TimeSpan.FromHours(18)""
                        StepMinutes=""30""
                        Format=""TimeFormat.TwelveHour"" />
            <ValidationMessage For=""@(() => appointment.Time)"" />
        </FormField>
    </div>

    <FormField Label=""Duration"">
        <Select @bind-Value=""@appointment.DurationMinutes"">
            <option value=""30"">30 minutes</option>
            <option value=""60"">1 hour</option>
            <option value=""90"">1.5 hours</option>
            <option value=""120"">2 hours</option>
        </Select>
    </FormField>

    @if (appointment.Date.HasValue && appointment.Time.HasValue)
    {
        var appointmentDateTime = appointment.Date.Value.Add(appointment.Time.Value);
        var endTime = appointmentDateTime.AddMinutes(appointment.DurationMinutes);

        <Alert Variant=""AlertVariant.Info"">
            <strong>Appointment Summary:</strong><br />
            Date: @appointment.Date.Value.ToLongDateString()<br />
            Time: @FormatTime(appointment.Time.Value)<br />
            Duration: @appointment.DurationMinutes minutes<br />
            End Time: @endTime.ToString(""h:mm tt"")
        </Alert>
    }

    <Button Type=""submit"" Variant=""ButtonVariant.Primary"">
        Schedule Appointment
    </Button>
</EditForm>

@code {
    private AppointmentModel appointment = new() { DurationMinutes = 60 };

    private async Task ScheduleAppointment()
    {
        await AppointmentService.CreateAsync(appointment);
        // Show success message and reset form
    }

    private string FormatTime(TimeSpan time)
    {
        var hours = time.Hours;
        var minutes = time.Minutes;
        var period = hours >= 12 ? ""PM"" : ""AM"";
        var displayHours = hours > 12 ? hours - 12 : (hours == 0 ? 12 : hours);
        return $""{displayHours}:{minutes:00} {period}"";
    }

    public class AppointmentModel
    {
        [Required]
        public string PatientName { get; set; }

        [Required]
        public DateTime? Date { get; set; }

        [Required]
        public TimeSpan? Time { get; set; }

        [Required]
        [Range(30, 240)]
        public int DurationMinutes { get; set; }
    }
}";
}


