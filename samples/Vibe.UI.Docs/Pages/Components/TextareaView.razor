    protected override void OnInitialized()
    {
        InitializeProps();
    }

    private void InitializeProps()
    {
        textareaProps = new List<PropDefinition>
        {
            PropDefinition.String("Value", "", "Textarea content"),
            PropDefinition.String("Placeholder", "Enter your text here...", "Placeholder text"),
            PropDefinition.Number("Rows", 4, description: "Number of visible rows"),
            PropDefinition.Boolean("Disabled", false, "Disable the textarea"),
            PropDefinition.Boolean("ReadOnly", false, "Make textarea read-only"),
            PropDefinition.Number("MaxLength", 0, description: "Maximum character length (0 = unlimited)"),
            PropDefinition.Boolean("ShowCharCount", false, "Show character count")
        };
    }

    private void HandlePropChanged(PropDefinition prop)
    {
        switch (prop.Name)
        {
            case "Value":
                currentValue = prop.Value?.ToString() ?? "";
                break;
            case "Placeholder":
                currentPlaceholder = prop.Value?.ToString() ?? "Enter your text here...";
                break;
            case "Rows":
                if (int.TryParse(prop.Value?.ToString(), out var rows))
                    currentRows = rows > 0 ? rows : 4;
                break;
            case "Disabled":
                currentDisabled = prop.Value is true || prop.Value?.ToString()?.ToLower() == "true";
                break;
            case "ReadOnly":
                currentReadOnly = prop.Value is true || prop.Value?.ToString()?.ToLower() == "true";
                break;
            case "MaxLength":
                if (int.TryParse(prop.Value?.ToString(), out var maxLength))
                    currentMaxLength = maxLength > 0 ? maxLength : null;
                break;
            case "ShowCharCount":
                currentShowCharCount = prop.Value is true || prop.Value?.ToString()?.ToLower() == "true";
                break;
        }
        StateHasChanged();
    }

    private void HandlePropsReset()
    {
        currentValue = "";
        currentPlaceholder = "Enter your text here...";
        currentRows = 4;
        currentDisabled = false;
        currentReadOnly = false;
        currentMaxLength = null;
        currentShowCharCount = false;
        InitializeProps();
        StateHasChanged();
    }

    private string GeneratedCode
    {
        get
        {
            var props = new List<string>();

            if (!string.IsNullOrEmpty(currentValue))
                props.Add($"Value=\"{currentValue}\"");
            if (currentPlaceholder != "Enter your text here...")
                props.Add($"Placeholder=\"{currentPlaceholder}\"");
            if (currentRows != 3)
                props.Add($"Rows=\"{currentRows}\"");
            if (currentDisabled)
                props.Add("Disabled=\"true\"");
            if (currentReadOnly)
                props.Add("ReadOnly=\"true\"");
            if (currentMaxLength.HasValue)
                props.Add($"MaxLength=\"{currentMaxLength}\"");
            if (currentShowCharCount)
                props.Add("ShowCharCount=\"true\"");

            var propsStr = props.Any() ? " " + string.Join(" ", props) : "";
            return $"<TextArea{propsStr} />";
        }
    }

