@page "/components/alert"

<PageTitle>Alert - Vibe.UI</PageTitle>

<div class="vibe-max-w-4xl vibe-mx-auto">
    <!-- Header -->
    <header class="vibe-mb-8">
        <div class="vibe-flex vibe-items-center vibe-gap-2 vibe-text-sm vibe-text-zinc-500 vibe-mb-2">
            <a href="/" class="hover:vibe-text-zinc-700 dark:hover:vibe-text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:vibe-text-zinc-700 dark:hover:vibe-text-zinc-300">Components</a>
            <span>/</span>
            <span class="vibe-text-zinc-900 dark:vibe-text-zinc-100">Alert</span>
        </div>
        <h1 class="vibe-text-3xl vibe-font-bold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-3">Alert</h1>
        <p class="vibe-text-lg vibe-text-zinc-600 dark:vibe-text-zinc-400">
            Displays an important message to get user's attention without interrupting their task.
        </p>
    </header>

    <!-- Preview -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-4">Preview</h2>
        <div class="vibe-p-6 vibe-rounded-xl vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-800 vibe-bg-white dark:vibe-bg-zinc-900 vibe-space-y-4">
            <Alert Variant="AlertVariant.Default">
                This is a default alert providing helpful information.
            </Alert>
            <Alert Variant="AlertVariant.Default" Title="With Title">
                This alert has a title for additional context.
            </Alert>
            <Alert Variant="AlertVariant.Destructive" Title="Destructive Alert">
                This is a destructive alert for warnings or errors.
            </Alert>
            @if (showDismissible)
            {
                <Alert Variant="AlertVariant.Default" Dismissible="true" OnDismiss="@(() => showDismissible = false)" Title="Dismissible">
                    This alert can be dismissed by clicking the close button.
                </Alert>
            }
            else
            {
                <Button Variant="ButtonVariant.Outline" OnClick="@(() => showDismissible = true)">Show Dismissible Alert</Button>
            }
        </div>
    </section>

    <!-- Examples Section -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-6">Examples</h2>

        <!-- Variants -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Variants</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Use different variants to communicate the type and urgency of the message.
            </p>
            <div class="vibe-space-y-3 vibe-p-6 vibe-bg-zinc-50 dark:vibe-bg-zinc-800/50 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 vibe-mb-3">
                <Alert Variant="AlertVariant.Default">Default alert for general information.</Alert>
                <Alert Variant="AlertVariant.Destructive">Destructive alert for errors or warnings.</Alert>
            </div>
            <CodeBlock Code="@VariantsCode" Language="razor" />
        </div>

        <!-- With Title -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">With Title</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Add a title for additional context and emphasis.
            </p>
            <div class="vibe-space-y-3 vibe-p-6 vibe-bg-zinc-50 dark:vibe-bg-zinc-800/50 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 vibe-mb-3">
                <Alert Title="Heads up!" Variant="AlertVariant.Default">
                    You can add components to your app using the CLI.
                </Alert>
            </div>
            <CodeBlock Code="@TitleCode" Language="razor" />
        </div>

        <!-- Dismissible -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Dismissible</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Allow users to dismiss the alert when the message is no longer needed.
            </p>
            <CodeBlock Code="@DismissibleCode" Language="razor" />
        </div>

        <!-- With Icon -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">With Icon</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Use custom icons to enhance visual communication.
            </p>
            <CodeBlock Code="@IconCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-4">Properties</h3>
            <div class="vibe-overflow-x-auto">
                <table class="vibe-w-full vibe-text-sm">
                    <thead>
                        <tr class="vibe-border-b vibe-border-zinc-200 dark:vibe-border-zinc-700">
