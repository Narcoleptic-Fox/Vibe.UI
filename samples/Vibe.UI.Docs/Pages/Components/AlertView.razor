@page "/components/alert"

<PageTitle>Alert - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">Alert</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">Alert</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            Displays an important message to get user's attention without interrupting their task.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 space-y-4">
            <Alert Variant="AlertVariant.Default">
                This is a default alert providing helpful information.
            </Alert>
            <Alert Variant="AlertVariant.Default" Title="With Title">
                This alert has a title for additional context.
            </Alert>
            <Alert Variant="AlertVariant.Destructive" Title="Destructive Alert">
                This is a destructive alert for warnings or errors.
            </Alert>
            @if (showDismissible)
            {
                <Alert Variant="AlertVariant.Default" Dismissible="true" OnDismiss="@(() => showDismissible = false)" Title="Dismissible">
                    This alert can be dismissed by clicking the close button.
                </Alert>
            }
            else
            {
                <Button Variant="ButtonVariant.Outline" OnClick="@(() => showDismissible = true)">Show Dismissible Alert</Button>
            }
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Variants -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Variants</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use different variants to communicate the type and urgency of the message.
            </p>
            <div class="space-y-3 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Alert Variant="AlertVariant.Default">Default alert for general information.</Alert>
                <Alert Variant="AlertVariant.Destructive">Destructive alert for errors or warnings.</Alert>
            </div>
            <CodeBlock Code="@VariantsCode" Language="razor" />
        </div>

        <!-- With Title -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Title</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Add a title for additional context and emphasis.
            </p>
            <div class="space-y-3 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <Alert Title="Heads up!" Variant="AlertVariant.Default">
                    You can add components to your app using the CLI.
                </Alert>
            </div>
            <CodeBlock Code="@TitleCode" Language="razor" />
        </div>

        <!-- Dismissible -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Dismissible</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Allow users to dismiss the alert when the message is no longer needed.
            </p>
            <CodeBlock Code="@DismissibleCode" Language="razor" />
        </div>

        <!-- With Icon -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Icon</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use custom icons to enhance visual communication.
            </p>
            <CodeBlock Code="@IconCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Variant</td>
                            <td class="py-3 px-4"><TypeBadge Type="AlertVariant" /></td>
                            <td class="py-3 px-4 text-zinc-500">Default</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Visual style of the alert</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Title</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Optional title displayed above content</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Dismissible</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">false</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Whether the alert can be dismissed</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Icon</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Custom icon to display</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ChildContent</td>
                            <td class="py-3 px-4"><TypeBadge Type="RenderFragment" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Alert message content</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Events -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Events</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnDismiss</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when alert is dismissed</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the Alert component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add alert" Language="bash" />
    </section>

    <!-- Accessibility -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Accessibility</h2>
        <ul class="space-y-2 text-zinc-600 dark:text-zinc-400">
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Uses ARIA <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">role="alert"</code> for important messages
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Screen readers announce content automatically
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Dismissible alerts are keyboard accessible
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Color is not the sole indicator (icons included)
            </li>
        </ul>
    </section>

    <!-- Related Components -->
    <section>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Related</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/components/toast" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Toast</h4>
                <p class="text-sm text-zinc-500">Temporary notification messages</p>
            </a>
            <a href="/components/callout" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Callout</h4>
                <p class="text-sm text-zinc-500">Highlighted information blocks</p>
            </a>
            <a href="/components/banner" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Banner</h4>
                <p class="text-sm text-zinc-500">Full-width announcement bars</p>
            </a>
        </div>
    </section>
</div>

@code {
    private bool showDismissible = true;

    private string VariantsCode => @"<Alert Variant=""AlertVariant.Default"">
    Default alert for general information.
</Alert>

<Alert Variant=""AlertVariant.Destructive"">
    Destructive alert for errors or warnings.
</Alert>";

    private string TitleCode => @"<Alert Title=""Heads up!"" Variant=""AlertVariant.Default"">
    You can add components to your app using the CLI.
</Alert>";

    private string DismissibleCode => @"<Alert Dismissible=""true"" OnDismiss=""@HandleDismiss"" Title=""Notice"">
    This alert can be dismissed.
</Alert>

@code {
    private void HandleDismiss()
    {
        // Handle dismiss action
    }
}";

    private string IconCode => @"<Alert Icon=""ℹ️"" Variant=""AlertVariant.Default"">
    Alert with custom icon.
</Alert>";
}
