@code {
    // Interactive preview state
    private string currentValue = "option2";
    private RadioGroup.RadioGroupOrientation currentOrientation = RadioGroup.RadioGroupOrientation.Vertical;
    private bool currentDisabled = false;

    // Example values
    private string selectedSize = "medium";
    private string selectedColor = "blue";
    private string contactMethod = "email";

    // PropTweaker props
    private List<PropDefinition> radioProps = new();

    protected override void OnInitialized()
    {
        InitializeProps();
    }

    private void InitializeProps()
    {
        radioProps = new List<PropDefinition>
        {
            PropDefinition.String("Value", "option2", "Currently selected value"),
            PropDefinition.Enum<RadioGroup.RadioGroupOrientation>("Orientation", RadioGroup.RadioGroupOrientation.Vertical, "Layout orientation"),
            PropDefinition.Boolean("Disabled", false, "Disable the radio group")
        };
    }

    private void HandlePropChanged(PropDefinition prop)
    {
        switch (prop.Name)
        {
            case "Value":
                currentValue = prop.Value?.ToString() ?? "option1";
                break;
            case "Orientation":
                if (Enum.TryParse<RadioGroup.RadioGroupOrientation>(prop.Value?.ToString(), out var orientation))
                    currentOrientation = orientation;
                break;
            case "Disabled":
                currentDisabled = prop.Value is true || prop.Value?.ToString()?.ToLower() == "true";
                break;
        }
        StateHasChanged();
    }

