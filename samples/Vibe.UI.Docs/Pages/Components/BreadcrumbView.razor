@page "/components/breadcrumb"

<PageTitle>Breadcrumb - Vibe.UI</PageTitle>

<div class="vibe-max-w-4xl vibe-mx-auto">
    <!-- Header -->
    <header class="vibe-mb-8">
        <div class="vibe-flex vibe-items-center vibe-gap-2 vibe-text-sm vibe-text-zinc-500 vibe-mb-2">
            <a href="/" class="hover:vibe-text-zinc-700 dark:hover:vibe-text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:vibe-text-zinc-700 dark:hover:vibe-text-zinc-300">Components</a>
            <span>/</span>
            <span class="vibe-text-zinc-900 dark:vibe-text-zinc-100">Breadcrumb</span>
        </div>
        <h1 class="vibe-text-3xl vibe-font-bold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-3">Breadcrumb</h1>
        <p class="vibe-text-lg vibe-text-zinc-600 dark:vibe-text-zinc-400">
            Displays the current location within a navigational hierarchy with support for custom separators and icons.
        </p>
    </header>

    <!-- Preview -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-4">Preview</h2>
        <div class="vibe-p-6 vibe-rounded-xl vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-800 vibe-bg-white dark:vibe-bg-zinc-900 vibe-space-y-6">
            <div>
                <h4 class="vibe-text-sm vibe-font-medium vibe-text-zinc-700 dark:vibe-text-zinc-300 vibe-mb-3">Basic Breadcrumb</h4>
                <Breadcrumb Separator="/">
                    <BreadcrumbItem Href="/">Home</BreadcrumbItem>
                    <BreadcrumbItem Href="/products">Products</BreadcrumbItem>
                    <BreadcrumbItem Href="/products/electronics">Electronics</BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Laptops</BreadcrumbItem>
                </Breadcrumb>
            </div>

            <div>
                <h4 class="vibe-text-sm vibe-font-medium vibe-text-zinc-700 dark:vibe-text-zinc-300 vibe-mb-3">Custom Separator</h4>
                <Breadcrumb Separator=">">
                    <BreadcrumbItem Href="/">Home</BreadcrumbItem>
                    <BreadcrumbItem Href="/docs">Documentation</BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Components</BreadcrumbItem>
                </Breadcrumb>
            </div>

            <div>
                <h4 class="vibe-text-sm vibe-font-medium vibe-text-zinc-700 dark:vibe-text-zinc-300 vibe-mb-3">With Custom Separator Content</h4>
                <Breadcrumb>
                    <BreadcrumbItem Href="/">
                        <ChildContent>Home</ChildContent>
                        <SeparatorContent>
                            <span class="vibe-mx-2 vibe-text-zinc-400">â†’</span>
                        </SeparatorContent>
                    </BreadcrumbItem>
                    <BreadcrumbItem Href="/settings">
                        <ChildContent>Settings</ChildContent>
                        <SeparatorContent>
                            <span class="vibe-mx-2 vibe-text-zinc-400">â†’</span>
                        </SeparatorContent>
                    </BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Profile</BreadcrumbItem>
                </Breadcrumb>
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-6">Examples</h2>

        <!-- Basic Usage -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Basic Usage</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Simple breadcrumb navigation showing hierarchy.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- With Icons -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">With Icons</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Add icons to breadcrumb items for visual context.
            </p>
            <CodeBlock Code="@IconsCode" Language="razor" />
        </div>

        <!-- Custom Separator -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Custom Separator</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Use different separators between breadcrumb items.
            </p>
            <CodeBlock Code="@SeparatorCode" Language="razor" />
        </div>

        <!-- Collapsed Items -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Collapsed Items</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Collapse middle items when breadcrumb trail is too long.
            </p>
            <CodeBlock Code="@CollapsedCode" Language="razor" />
        </div>
    </section>

