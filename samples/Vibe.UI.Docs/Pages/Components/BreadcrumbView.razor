@page "/components/breadcrumb"

<PageTitle>Breadcrumb - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">Breadcrumb</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">Breadcrumb</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            Displays the current location within a navigational hierarchy with support for custom separators and icons.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 space-y-6">
            <div>
                <h4 class="text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-3">Basic Breadcrumb</h4>
                <Breadcrumb Separator="/">
                    <BreadcrumbItem Href="/">Home</BreadcrumbItem>
                    <BreadcrumbItem Href="/products">Products</BreadcrumbItem>
                    <BreadcrumbItem Href="/products/electronics">Electronics</BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Laptops</BreadcrumbItem>
                </Breadcrumb>
            </div>

            <div>
                <h4 class="text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-3">Custom Separator</h4>
                <Breadcrumb Separator=">">
                    <BreadcrumbItem Href="/">Home</BreadcrumbItem>
                    <BreadcrumbItem Href="/docs">Documentation</BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Components</BreadcrumbItem>
                </Breadcrumb>
            </div>

            <div>
                <h4 class="text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-3">With Custom Separator Content</h4>
                <Breadcrumb>
                    <BreadcrumbItem Href="/">
                        <ChildContent>Home</ChildContent>
                        <SeparatorContent>
                            <span class="mx-2 text-zinc-400">â†’</span>
                        </SeparatorContent>
                    </BreadcrumbItem>
                    <BreadcrumbItem Href="/settings">
                        <ChildContent>Settings</ChildContent>
                        <SeparatorContent>
                            <span class="mx-2 text-zinc-400">â†’</span>
                        </SeparatorContent>
                    </BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Profile</BreadcrumbItem>
                </Breadcrumb>
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Usage -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Usage</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Simple breadcrumb navigation showing hierarchy.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- With Icons -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Icons</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Add icons to breadcrumb items for visual context.
            </p>
            <CodeBlock Code="@IconsCode" Language="razor" />
        </div>

        <!-- Custom Separator -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Custom Separator</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use different separators between breadcrumb items.
            </p>
            <CodeBlock Code="@SeparatorCode" Language="razor" />
        </div>

        <!-- Collapsed Items -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Collapsed Items</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Collapse middle items when breadcrumb trail is too long.
            </p>
            <CodeBlock Code="@CollapsedCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Items</td>
                            <td class="py-3 px-4"><TypeBadge Type="List&lt;BreadcrumbItem&gt;" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Breadcrumb items to display</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Separator</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">"/"</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Separator between items</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">MaxItems</td>
                            <td class="py-3 px-4"><TypeBadge Type="int?" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Maximum items before collapsing</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Events -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Events</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnItemClick</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback&lt;BreadcrumbItem&gt;" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when item is clicked</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the Breadcrumb component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add breadcrumb" Language="bash" />
    </section>

    <!-- Accessibility -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Accessibility</h2>
        <ul class="space-y-2 text-zinc-600 dark:text-zinc-400">
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Uses semantic <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">&lt;nav&gt;</code> with aria-label="breadcrumb"
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Current page marked with aria-current="page"
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Keyboard accessible navigation
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Screen reader friendly separators
            </li>
        </ul>
    </section>

    <!-- Related Components -->
    <section>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Related</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/components/link" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Link</h4>
                <p class="text-sm text-zinc-500">Navigation links</p>
            </a>
            <a href="/components/menu" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Menu</h4>
                <p class="text-sm text-zinc-500">Dropdown action menus</p>
            </a>
            <a href="/components/tabs" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Tabs</h4>
                <p class="text-sm text-zinc-500">Tabbed navigation</p>
            </a>
        </div>
    </section>
</div>

