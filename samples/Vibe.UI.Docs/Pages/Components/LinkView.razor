@page "/components/link"

<PageTitle>Link - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">Link</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">Link</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            A navigational link component with support for external URLs, internal routing, styling variants, and proper accessibility.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900 flex justify-center gap-4 flex-wrap">
            <Link Href="/getting-started">Internal Link</Link>
            <Link Href="https://github.com" Target="_blank">External Link</Link>
            <Link Variant="Link.LinkVariant.Muted">Muted Link</Link>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Usage -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Usage</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Simple navigation links.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 space-y-3">
                <Link Href="/getting-started">Go to Getting Started</Link>
                <Link Href="/installation">Installation Guide</Link>
                <Link Href="/theming">Theming Documentation</Link>
            </div>
        </div>

        <!-- External Links -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">External Links</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Links to external websites automatically get proper security attributes.
            </p>
            <CodeBlock Code="@ExternalCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 space-y-3">
                <Link Href="https://github.com" Target="_blank">
                    GitHub (opens in new tab)
                </Link>
                <Link Href="https://www.npmjs.com" Target="_blank">
                    npm Registry
                </Link>
            </div>
            <div class="mt-3">
                <Alert Variant="AlertVariant.Info">
                    External links with <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">Target="_blank"</code> automatically include <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">rel="noopener noreferrer"</code> for security.
                </Alert>
            </div>
        </div>

        <!-- Link Variants -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Link Variants</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Different visual styles for different contexts.
            </p>
            <CodeBlock Code="@VariantsCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 space-y-3">
                <div>
                    <Link Variant="Link.LinkVariant.Default">Default Link (Primary color)</Link>
                </div>
                <div>
                    <Link Variant="Link.LinkVariant.Primary">Primary Link</Link>
                </div>
                <div>
                    <Link Variant="Link.LinkVariant.Secondary">Secondary Link</Link>
                </div>
                <div>
                    <Link Variant="Link.LinkVariant.Muted">Muted Link</Link>
                </div>
            </div>
        </div>

        <!-- Underline Styles -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Underline Styles</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Control when the underline appears.
            </p>
            <CodeBlock Code="@UnderlineCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 space-y-3">
                <div>
                    <Link Underline="Link.LinkUnderline.Always">Always Underlined</Link>
                </div>
                <div>
                    <Link Underline="Link.LinkUnderline.Hover">Underline on Hover (default)</Link>
                </div>
                <div>
                    <Link Underline="Link.LinkUnderline.None">No Underline</Link>
                </div>
            </div>
        </div>

        <!-- Links with Icons -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Links with Icons</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Enhance links with icons or indicators.
            </p>
            <CodeBlock Code="@IconsCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 space-y-3">
                <Link Href="/home">
                    <span>üè†</span>
                    <span>Home</span>
                </Link>
                <Link Href="/settings">
                    <span>Settings</span>
                    <span>‚öôÔ∏è</span>
                </Link>
                <Link Href="https://example.com" Target="_blank">
                    <span>External Site</span>
                    <span>‚Üó</span>
                </Link>
            </div>
        </div>

        <!-- Disabled State -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Disabled State</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Disable links when actions are unavailable.
            </p>
            <CodeBlock Code="@DisabledCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 flex gap-4">
                <Link Href="/page">Active Link</Link>
                <Link Href="/page" Disabled="true">Disabled Link</Link>
            </div>
        </div>

        <!-- Click Events -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Click Events</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Handle click events for custom behavior.
            </p>
            <CodeBlock Code="@EventsCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
                <Link OnClick="@HandleLinkClick">
                    Click Me (no href - acts as button)
                </Link>
                @if (!string.IsNullOrEmpty(clickMessage))
                {
                    <p class="mt-3 text-brand-teal">@clickMessage</p>
                }
            </div>
        </div>

        <!-- Inline with Text -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Inline with Text</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Links work seamlessly within paragraphs.
            </p>
            <CodeBlock Code="@InlineCode" Language="razor" />
            <div class="mt-4 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
                <p class="text-zinc-700 dark:text-zinc-300">
                    Check out the <Link Href="/getting-started">Getting Started guide</Link> to learn more about
                    Vibe.UI. You can also explore the <Link Href="/components/button">Button component</Link> or
                    read our <Link Href="/theming">theming documentation</Link>.
                </p>
            </div>
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Href</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">URL to navigate to. If null, renders as button</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Target</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Target attribute (_blank, _self, etc.)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Variant</td>
                            <td class="py-3 px-4"><TypeBadge Type="LinkVariant" /></td>
                            <td class="py-3 px-4 text-zinc-500">Default</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Visual style variant</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Underline</td>
                            <td class="py-3 px-4"><TypeBadge Type="LinkUnderline" /></td>
                            <td class="py-3 px-4 text-zinc-500">Hover</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Underline behavior (Always, Hover, None)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Disabled</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">false</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Whether the link is disabled</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ChildContent</td>
                            <td class="py-3 px-4"><TypeBadge Type="RenderFragment" /></td>
                            <td class="py-3 px-4 text-zinc-500">‚Äî</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Link content</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Events -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Events</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnClick</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback&lt;MouseEventArgs&gt;" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when link is clicked</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the Link component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add link" Language="bash" />
    </section>

    <!-- Accessibility -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Accessibility</h2>
        <ul class="space-y-2 text-zinc-600 dark:text-zinc-400">
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Uses semantic <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">&lt;a&gt;</code> element for links
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                External links with <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">Target="_blank"</code> include <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">rel="noopener noreferrer"</code>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Disabled links use <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">aria-disabled</code> attribute
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Focus visible styles for keyboard users
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Screen readers announce link purpose correctly
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Links without href render as buttons with proper semantics
            </li>
        </ul>
    </section>

    <!-- Related Components -->
    <section>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Related</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/components/button" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Button</h4>
                <p class="text-sm text-zinc-500">Interactive button elements</p>
            </a>
            <a href="/components/breadcrumb" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Breadcrumb</h4>
                <p class="text-sm text-zinc-500">Navigation hierarchy</p>
            </a>
            <a href="/components/menu" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Menu</h4>
                <p class="text-sm text-zinc-500">Dropdown action menus</p>
            </a>
        </div>
    </section>
</div>

