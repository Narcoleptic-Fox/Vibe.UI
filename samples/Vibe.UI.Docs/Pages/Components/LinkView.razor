@page "/components/link"
@using Vibe.UI.Components

<PageTitle>Link - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Link"
               Category="Navigation"
               Description="A navigational link component with support for external URLs, internal routing, styling variants, and proper accessibility."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo" style="max-width: 600px; margin: 0 auto; text-align: center;">
            <Stack Direction="Stack.StackDirection.Horizontal" Spacing="1rem" Justify="Stack.StackJustify.Center">
                <Link Href="/getting-started">Internal Link</Link>
                <Link Href="https://github.com" Target="_blank">External Link</Link>
                <Link Variant="Link.LinkVariant.Muted">Muted Link</Link>
            </Stack>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Usage</h3>
            <p>Simple navigation links:</p>
            <CodeBlock Code="@BasicCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Stack Spacing="1rem">
                    <Link Href="/getting-started">Go to Getting Started</Link>
                    <Link Href="/installation">Installation Guide</Link>
                    <Link Href="/theming">Theming Documentation</Link>
                </Stack>
            </div>
        </div>

        <div class="example-item">
            <h3>External Links</h3>
            <p>Links to external websites automatically get proper security attributes:</p>
            <CodeBlock Code="@ExternalCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Stack Spacing="1rem">
                    <Link Href="https://github.com" Target="_blank">
                        GitHub (opens in new tab)
                    </Link>
                    <Link Href="https://www.npmjs.com" Target="_blank">
                        npm Registry
                    </Link>
                </Stack>
            </div>
            <Alert Variant="AlertVariant.Info" style="margin-top: 1rem;">
                External links with <code>Target="_blank"</code> automatically include <code>rel="noopener noreferrer"</code> for security.
            </Alert>
        </div>

        <div class="example-item">
            <h3>Link Variants</h3>
            <p>Different visual styles for different contexts:</p>
            <CodeBlock Code="@VariantsCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Stack Spacing="1rem">
                    <div>
                        <Link Variant="Link.LinkVariant.Default">Default Link (Primary color)</Link>
                    </div>
                    <div>
                        <Link Variant="Link.LinkVariant.Primary">Primary Link</Link>
                    </div>
                    <div>
                        <Link Variant="Link.LinkVariant.Secondary">Secondary Link</Link>
                    </div>
                    <div>
                        <Link Variant="Link.LinkVariant.Muted">Muted Link</Link>
                    </div>
                </Stack>
            </div>
        </div>

        <div class="example-item">
            <h3>Underline Styles</h3>
            <p>Control when the underline appears:</p>
            <CodeBlock Code="@UnderlineCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Stack Spacing="1rem">
                    <div>
                        <Link Underline="Link.LinkUnderline.Always">Always Underlined</Link>
                    </div>
                    <div>
                        <Link Underline="Link.LinkUnderline.Hover">Underline on Hover (default)</Link>
                    </div>
                    <div>
                        <Link Underline="Link.LinkUnderline.None">No Underline</Link>
                    </div>
                </Stack>
            </div>
        </div>

        <div class="example-item">
            <h3>Links with Icons</h3>
            <p>Enhance links with icons or indicators:</p>
            <CodeBlock Code="@IconsCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Stack Spacing="1rem">
                    <Link Href="/home">
                        <span>üè†</span>
                        <span>Home</span>
                    </Link>
                    <Link Href="/settings">
                        <span>Settings</span>
                        <span>‚öôÔ∏è</span>
                    </Link>
                    <Link Href="https://example.com" Target="_blank">
                        <span>External Site</span>
                        <span>‚Üó</span>
                    </Link>
                </Stack>
            </div>
        </div>

        <div class="example-item">
            <h3>Disabled State</h3>
            <p>Disable links when actions are unavailable:</p>
            <CodeBlock Code="@DisabledCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Stack Direction="Stack.StackDirection.Horizontal" Spacing="1rem">
                    <Link Href="/page">Active Link</Link>
                    <Link Href="/page" Disabled="true">Disabled Link</Link>
                </Stack>
            </div>
        </div>

        <div class="example-item">
            <h3>Click Events</h3>
            <p>Handle click events for custom behavior:</p>
            <CodeBlock Code="@EventsCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Link OnClick="@HandleLinkClick">
                    Click Me (no href - acts as button)
                </Link>
                @if (!string.IsNullOrEmpty(clickMessage))
                {
                    <p style="margin-top: 0.5rem; color: var(--vibe-success);">@clickMessage</p>
                }
            </div>
        </div>

        <div class="example-item">
            <h3>Inline with Text</h3>
            <p>Links work seamlessly within paragraphs:</p>
            <CodeBlock Code="@InlineCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <p>
                    Check out the <Link Href="/getting-started">Getting Started guide</Link> to learn more about
                    Vibe.UI. You can also explore the <Link Href="/components/button">Button component</Link> or
                    read our <Link Href="/theming">theming documentation</Link>.
                </p>
            </div>
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Href</code></td>
                    <td>string?</td>
                    <td>null</td>
                    <td>URL to navigate to. If null, renders as button</td>
                </tr>
                <tr>
                    <td><code>Target</code></td>
                    <td>string?</td>
                    <td>null</td>
                    <td>Target attribute (_blank, _self, etc.)</td>
                </tr>
                <tr>
                    <td><code>Variant</code></td>
                    <td>LinkVariant</td>
                    <td>Default</td>
                    <td>Visual style variant</td>
                </tr>
                <tr>
                    <td><code>Underline</code></td>
                    <td>LinkUnderline</td>
                    <td>Hover</td>
                    <td>Underline behavior (Always, Hover, None)</td>
                </tr>
                <tr>
                    <td><code>Disabled</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Whether the link is disabled</td>
                </tr>
                <tr>
                    <td><code>ChildContent</code></td>
                    <td>RenderFragment</td>
                    <td>-</td>
                    <td>Link content</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>OnClick</code></td>
                    <td>EventCallback&lt;MouseEventArgs&gt;</td>
                    <td>Callback when link is clicked</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>Uses semantic <code>&lt;a&gt;</code> element for links</li>
            <li>External links with <code>Target="_blank"</code> include <code>rel="noopener noreferrer"</code></li>
            <li>Disabled links use <code>aria-disabled</code> attribute</li>
            <li>Focus visible styles for keyboard users</li>
            <li>Screen readers announce link purpose correctly</li>
            <li>Links without href render as buttons with proper semantics</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

