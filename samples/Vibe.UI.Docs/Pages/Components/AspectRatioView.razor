@page "/components/aspectratio"

<PageTitle>AspectRatio - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">AspectRatio</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">AspectRatio</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            Maintains a desired aspect ratio for its child content, responsive to container width.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900">
            <div class="max-w-xl">
                <h4 class="text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-3">16:9 Video Container</h4>
                <AspectRatio Ratio="16.0/9.0">
                    <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; height: 100%; border-radius: 0.5rem;">
                        16:9 Aspect Ratio
                    </div>
                </AspectRatio>
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- 16:9 Aspect Ratio -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">16:9 Aspect Ratio</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Standard widescreen video format, commonly used for modern video content.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-xl">
                    <AspectRatio Ratio="16.0/9.0">
                        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; height: 100%; border-radius: 0.5rem;">
                            16:9 Video Container
                        </div>
                    </AspectRatio>
                </div>
            </div>
            <CodeBlock Code="@SixteenNineCode" Language="razor" />
        </div>

        <!-- 4:3 Aspect Ratio -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">4:3 Aspect Ratio</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Classic standard format, often used for traditional photographs.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md">
                    <AspectRatio Ratio="4.0/3.0">
                        <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; height: 100%; border-radius: 0.5rem;">
                            4:3 Photo Container
                        </div>
                    </AspectRatio>
                </div>
            </div>
            <CodeBlock Code="@FourThreeCode" Language="razor" />
        </div>

        <!-- Square (1:1) -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Square (1:1)</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Perfect square aspect ratio, popular for profile images and social media posts.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-xs">
                    <AspectRatio Ratio="1.0">
                        <div style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; height: 100%; border-radius: 0.5rem;">
                            1:1 Square
                        </div>
                    </AspectRatio>
                </div>
            </div>
            <CodeBlock Code="@SquareCode" Language="razor" />
        </div>

        <!-- With Image -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Image</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use AspectRatio to ensure images maintain their proportions.
            </p>
            <CodeBlock Code="@ImageCode" Language="razor" />
        </div>

        <!-- With Video -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Video</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Embed responsive video players with consistent aspect ratios.
            </p>
            <CodeBlock Code="@VideoCode" Language="razor" />
        </div>

        <!-- Common Aspect Ratios -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Common Aspect Ratios</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Visual comparison of commonly used aspect ratios.
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
                <div>
                    <p class="mb-2 font-medium text-sm text-zinc-700 dark:text-zinc-300">21:9 (Ultrawide)</p>
                    <AspectRatio Ratio="21.0/9.0">
                        <div style="background: var(--vibe-accent); color: var(--vibe-accent-foreground); display: flex; align-items: center; justify-content: center; height: 100%; border-radius: 0.5rem; font-size: 0.875rem;">
                            21:9
