@page "/components/formfield"
@using Vibe.UI.Docs.Models

<PageTitle>FormField - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">FormField</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">FormField</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            A wrapper for form inputs that provides consistent labeling, error display, and layout.
        </p>
    </header>

    <!-- Preview Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
            <div class="max-w-md space-y-4">
                <FormField TValue="string" Label="Username">
                    <Input Placeholder="Enter username" />
                </FormField>

                <FormField TValue="string" Label="Email" Description="We'll never share your email">
                    <Input Type="email" Placeholder="you@example.com" />
                </FormField>

                <FormField TValue="string" Label="Password" Description="Must be at least 8 characters">
                    <Input Type="password" Placeholder="Enter password" />
                </FormField>
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Usage -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Usage</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Wrap input elements with FormField to add a label and proper structure.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md">
                    <FormField TValue="string" Label="Username">
                        <Input Placeholder="Enter username" />
                    </FormField>
                </div>
            </div>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- With Required Indicator -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Required Indicator</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Show a visual indicator for required fields.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md space-y-4">
                    <FormField TValue="string" Label="Email" Required="true">
                        <Input Type="email" Placeholder="you@example.com" />
                    </FormField>

                    <FormField TValue="string" Label="Password" Required="true">
                        <Input Type="password" Placeholder="Enter password" />
                    </FormField>
                </div>
            </div>
            <CodeBlock Code="@RequiredCode" Language="razor" />
        </div>

        <!-- With Helper Text -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Helper Text</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Add descriptive helper text below the input using the Description property.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md space-y-4">
                    <FormField TValue="string" Label="Password" Description="Must be at least 8 characters long">
                        <Input Type="password" />
                    </FormField>

                    <FormField TValue="string" Label="Website" Description="Optional: Enter your website URL">
                        <Input Type="url" Placeholder="https://example.com" />
                    </FormField>
                </div>
            </div>
            <CodeBlock Code="@HelperTextCode" Language="razor" />
        </div>

        <!-- With Error Message -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Error Message</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Display validation errors using the Error property.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md space-y-4">
                    <FormField TValue="string" Label="Email" Error="Please enter a valid email address">
                        <Input Type="email" Value="invalid-email" />
                    </FormField>

                    <FormField TValue="string" Label="Username" Error="This username is already taken">
                        <Input Value="johndoe" />
                    </FormField>
                </div>
            </div>
            <CodeBlock Code="@ErrorCode" Language="razor" />
        </div>

        <!-- Horizontal Layout -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Horizontal Layout</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use horizontal layout for side-by-side label and input arrangement.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-2xl space-y-4">
                    <FormField TValue="string" Label="Name" Layout="FormFieldLayout.Horizontal">
                        <Input Placeholder="Enter name" />
                    </FormField>

                    <FormField TValue="string" Label="Email" Layout="FormFieldLayout.Horizontal">
                        <Input Type="email" Placeholder="you@example.com" />
                    </FormField>
                </div>
            </div>
            <CodeBlock Code="@HorizontalCode" Language="razor" />
        </div>

        <!-- With Different Input Types -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Different Input Types</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                FormField works with any input component.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md space-y-4">
                    <FormField TValue="string" Label="Country">
                        <Select Placeholder="Select a country...">
                            <option value="us">United States</option>
                            <option value="uk">United Kingdom</option>
                            <option value="ca">Canada</option>
                        </Select>
                    </FormField>

                    <FormField TValue="string" Label="Bio">
                        <Textarea Placeholder="Tell us about yourself..." Rows="4" />
                    </FormField>

                    <FormField TValue="bool" Label="Preferences">
                        <Checkbox>Subscribe to newsletter</Checkbox>
                    </FormField>
                </div>
            </div>
            <CodeBlock Code="@InputTypesCode" Language="razor" />
        </div>

        <!-- Complex Example -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Complex Form Example</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Combining multiple FormFields with different configurations.
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md space-y-4">
                    <FormField TValue="string" Label="Full Name" Required="true">
                        <Input Placeholder="John Doe" />
                    </FormField>

                    <FormField TValue="string" Label="Email" Required="true" Description="We'll send confirmation to this email">
                        <Input Type="email" Placeholder="john@example.com" />
                    </FormField>

                    <FormField TValue="string" Label="Phone" Description="Include country code">
                        <Input Type="tel" Placeholder="+1 (555) 000-0000" />
                    </FormField>

                    <FormField TValue="string" Label="Comments">
                        <Textarea Placeholder="Additional comments..." Rows="3" />
                    </FormField>
                </div>
            </div>
            <CodeBlock Code="@ComplexCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Label</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Label text for the field</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Description</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Helper text to display below the input</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Required</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">false</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Whether to show required indicator</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Error</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Error message to display</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Layout</td>
                            <td class="py-3 px-4"><TypeBadge Type="FormFieldLayout" /></td>
                            <td class="py-3 px-4 text-zinc-500">Vertical</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Layout orientation (Vertical, Horizontal)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">TValue</td>
                            <td class="py-3 px-4"><TypeBadge Type="Type" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Type parameter for strongly-typed field binding</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ChildContent</td>
                            <td class="py-3 px-4"><TypeBadge Type="RenderFragment" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Input control content</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the FormField component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add formfield" Language="bash" />
    </section>

