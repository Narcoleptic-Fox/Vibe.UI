@code {
    // Interactive preview state
    private double currentValue = 50;
    private double currentMin = 0;
    private double currentMax = 100;
    private double currentStep = 1;
    private bool currentDisabled = false;
    private bool currentShowValue = true;

    // Example values
    private double volume = 75;
    private double temperature = 98;
    private double brightness = 60;
    private double opacity = 0.8;
    private double verticalValue = 50;

    // PropTweaker props
    private List<PropDefinition> sliderProps = new();

    protected override void OnInitialized()
    {
        InitializeProps();
    }

    private void InitializeProps()
    {
        sliderProps = new List<PropDefinition>
        {
            PropDefinition.Number("Value", 50, description: "Current slider value"),
            PropDefinition.Number("Min", 0, description: "Minimum value"),
            PropDefinition.Number("Max", 100, description: "Maximum value"),
            PropDefinition.Number("Step", 1, description: "Step increment"),
            PropDefinition.Boolean("Disabled", false, "Disable the slider"),
            PropDefinition.Boolean("ShowValue", true, "Display current value")
        };
    }

    private void HandlePropChanged(PropDefinition prop)
    {
        switch (prop.Name)
        {
            case "Value":
                if (double.TryParse(prop.Value?.ToString(), out var value))
                    currentValue = value;
                break;
            case "Min":
                if (double.TryParse(prop.Value?.ToString(), out var min))
                    currentMin = min;
                break;
            case "Max":
                if (double.TryParse(prop.Value?.ToString(), out var max))
                    currentMax = max;
                break;
            case "Step":
                if (double.TryParse(prop.Value?.ToString(), out var step))
                    currentStep = step;
                break;
            case "Disabled":
                currentDisabled = prop.Value is true || prop.Value?.ToString()?.ToLower() == "true";
                break;
            case "ShowValue":
                currentShowValue = prop.Value is true || prop.Value?.ToString()?.ToLower() == "true";
                break;
        }
        StateHasChanged();
    }

    private void HandlePropsReset()
    {
        currentValue = 50;
        currentMin = 0;
        currentMax = 100;
        currentStep = 1;
        currentDisabled = false;
        currentShowValue = true;
        InitializeProps();
        StateHasChanged();
    }

    private string GeneratedCode
    {
        get
        {
            var props = new List<string>();

            if (currentValue != 0)
                props.Add($"Value=\"{currentValue}\"");
            if (currentMin != 0)
                props.Add($"Min=\"{currentMin}\"");
            if (currentMax != 100)
                props.Add($"Max=\"{currentMax}\"");
            if (currentStep != 1)
                props.Add($"Step=\"{currentStep}\"");
            if (currentDisabled)
                props.Add("Disabled=\"true\"");
            if (currentShowValue)
                props.Add("ShowValue=\"true\"");

            var propsStr = props.Any() ? " " + string.Join(" ", props) : "";
            return $"<Slider{propsStr} />";
        }
    }

