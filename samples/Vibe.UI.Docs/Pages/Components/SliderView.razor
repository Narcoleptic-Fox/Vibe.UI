    <!-- Interactive Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Interactive Preview</h2>
        <LivePreview Code="@GeneratedCode" Props="@sliderProps" OnPropChanged="HandlePropChanged" OnPropsReset="HandlePropsReset">
            <PreviewContent>
                <div class="w-full max-w-md">
                    <Slider Value="@currentValue"
                            ValueChanged="@((double val) => currentValue = val)"
                            Min="@currentMin"
                            Max="@currentMax"
                            Step="@currentStep"
                            Disabled="@currentDisabled"
                            ShowValue="@currentShowValue" />
                    @if (currentShowValue)
                    {
                        <p class="mt-2 text-sm text-brand-teal">Value: @currentValue.ToString("F1")</p>
                    }
                </div>
            </PreviewContent>
        </LivePreview>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Default -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Default</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                A basic slider with default range (0-100).
            </p>
            <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700 mb-3">
                <div class="max-w-md">
                    <Slider Value="@volume" ValueChanged="@((double val) => volume = val)" ShowValue="true" />
                    <p class="mt-2 text-sm text-brand-teal">Volume: @volume%</p>
                </div>
