@page "/components/carousel"
@using Vibe.UI.Components

<PageTitle>Carousel - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">Carousel</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">Carousel</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            A slideshow component for cycling through images or content with navigation controls and indicators.
        </p>
    </header>

    <!-- Preview Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
            <div style="max-width: 600px; margin: 0 auto;">
                <Carousel ShowNavigation="true" ShowIndicators="true">
                    <CarouselItem>
                        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 4rem 2rem; text-align: center; border-radius: 0.5rem;">
                            <h2 style="margin: 0 0 1rem 0;">First Slide</h2>
                            <p style="margin: 0;">Beautiful carousel component</p>
                        </div>
                    </CarouselItem>
                    <CarouselItem>
                        <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; padding: 4rem 2rem; text-align: center; border-radius: 0.5rem;">
                            <h2 style="margin: 0 0 1rem 0;">Second Slide</h2>
                            <p style="margin: 0;">With smooth transitions</p>
                        </div>
                    </CarouselItem>
                    <CarouselItem>
                        <div style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; padding: 4rem 2rem; text-align: center; border-radius: 0.5rem;">
                            <h2 style="margin: 0 0 1rem 0;">Third Slide</h2>
                            <p style="margin: 0;">Easy to customize</p>
                        </div>
                    </CarouselItem>
                </Carousel>
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Carousel -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Carousel</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Create a simple image carousel with navigation controls.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- Auto-play -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Auto-play</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Enable automatic slide transitions with configurable intervals.
            </p>
            <CodeBlock Code="@AutoPlayCode" Language="razor" />
        </div>

        <!-- With Captions -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Captions</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Add descriptive captions overlaid on slides.
            </p>
            <CodeBlock Code="@CaptionsCode" Language="razor" />
        </div>

        <!-- Thumbnails -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Thumbnails</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Display thumbnail navigation for direct slide access.
            </p>
            <CodeBlock Code="@ThumbnailsCode" Language="razor" />
        </div>

        <!-- Custom Content -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Custom Content</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use carousel with any content like testimonials or product features.
            </p>
            <CodeBlock Code="@CustomContentCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Items</td>
                            <td class="py-3 px-4"><TypeBadge Type="IEnumerable<TItem>" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Collection of items to display</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ItemTemplate</td>
                            <td class="py-3 px-4"><TypeBadge Type="RenderFragment<TItem>" /></td>
                            <td class="py-3 px-4 text-zinc-500">—</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Template for rendering each item</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">AutoPlay</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">false</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Automatically cycle through items</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Interval</td>
                            <td class="py-3 px-4"><TypeBadge Type="int" /></td>
                            <td class="py-3 px-4 text-zinc-500">5000</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Auto-play interval in milliseconds</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ShowIndicators</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">true</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Show position indicator dots</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ShowControls</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">true</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Show previous/next navigation buttons</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Loop</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">true</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Loop back to first item after last</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Events -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Events</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnSlideChanged</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback<CarouselSlideEventArgs>" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when active slide changes</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnPrevious</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when previous button is clicked</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">OnNext</td>
                            <td class="py-3 px-4"><TypeBadge Type="EventCallback" /></td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Callback when next button is clicked</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the Carousel component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add carousel" Language="bash" />
    </section>

    <!-- Accessibility -->
