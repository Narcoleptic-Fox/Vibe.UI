@page "/components/dropdown"
@using Vibe.UI.Components

<PageTitle>Dropdown - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Dropdown"
               Category="Overlay"
               Description="Displays a list of actions or options when triggered."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo" style="display: flex; gap: 2rem; justify-content: center; padding: 2rem; flex-wrap: wrap;">
            <DropdownMenu Position="bottom" Align="start">
                <TriggerContent>
                    <Button>Dropdown Menu</Button>
                </TriggerContent>
                <Content>
                    <div style="background: white; border: 1px solid #ddd; border-radius: 0.5rem; padding: 0.5rem; box-shadow: 0 2px 8px rgba(0,0,0,0.1); min-width: 200px;">
                        <div style="padding: 0.5rem 1rem; cursor: pointer; border-radius: 0.25rem;" onmouseover="this.style.backgroundColor='#f3f4f6'" onmouseout="this.style.backgroundColor='transparent'">Profile</div>
                        <div style="padding: 0.5rem 1rem; cursor: pointer; border-radius: 0.25rem;" onmouseover="this.style.backgroundColor='#f3f4f6'" onmouseout="this.style.backgroundColor='transparent'">Settings</div>
                        <div style="border-top: 1px solid #e5e7eb; margin: 0.5rem 0;"></div>
                        <div style="padding: 0.5rem 1rem; cursor: pointer; color: #dc2626; border-radius: 0.25rem;" onmouseover="this.style.backgroundColor='#fee2e2'" onmouseout="this.style.backgroundColor='transparent'">Logout</div>
                    </div>
                </Content>
            </DropdownMenu>

            <DropdownMenu Position="bottom" Align="end">
                <TriggerContent>
                    <Button Variant="ButtonVariant.Secondary">Actions ‚ñº</Button>
                </TriggerContent>
                <Content>
                    <div style="background: white; border: 1px solid #ddd; border-radius: 0.5rem; padding: 0.5rem; box-shadow: 0 2px 8px rgba(0,0,0,0.1); min-width: 180px;">
                        <div style="padding: 0.5rem 1rem; cursor: pointer; border-radius: 0.25rem;" onmouseover="this.style.backgroundColor='#f3f4f6'" onmouseout="this.style.backgroundColor='transparent'">‚úèÔ∏è Edit</div>
                        <div style="padding: 0.5rem 1rem; cursor: pointer; border-radius: 0.25rem;" onmouseover="this.style.backgroundColor='#f3f4f6'" onmouseout="this.style.backgroundColor='transparent'">üìã Copy</div>
                        <div style="padding: 0.5rem 1rem; cursor: pointer; border-radius: 0.25rem;" onmouseover="this.style.backgroundColor='#f3f4f6'" onmouseout="this.style.backgroundColor='transparent'">üì• Download</div>
                        <div style="border-top: 1px solid #e5e7eb; margin: 0.5rem 0;"></div>
                        <div style="padding: 0.5rem 1rem; cursor: pointer; color: #dc2626; border-radius: 0.25rem;" onmouseover="this.style.backgroundColor='#fee2e2'" onmouseout="this.style.backgroundColor='transparent'">üóëÔ∏è Delete</div>
                    </div>
                </Content>
            </DropdownMenu>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Usage</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Icons</h3>
            <CodeBlock Code="@IconsCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Placement Options</h3>
            <CodeBlock Code="@PlacementCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Sections</h3>
            <CodeBlock Code="@SectionsCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Placement</code></td>
                    <td>DropdownPlacement</td>
                    <td>BottomStart</td>
                    <td>Dropdown placement</td>
                </tr>
                <tr>
                    <td><code>Trigger</code></td>
                    <td>DropdownTrigger</td>
                    <td>Click</td>
                    <td>Trigger type (Click, Hover)</td>
                </tr>
                <tr>
                    <td><code>CloseOnSelect</code></td>
                    <td>bool</td>
                    <td>true</td>
                    <td>Close after item selection</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>OnItemClick</code></td>
                    <td>EventCallback&lt;string&gt;</td>
                    <td>Callback when item is clicked</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>Keyboard navigation support</li>
            <li>ARIA roles and attributes</li>
            <li>Focus management</li>
            <li>Escape key to close</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

