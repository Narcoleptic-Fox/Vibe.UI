        <!-- Basic Usage -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Usage</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Simple dropdown menu with actions.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- With Icons -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Icons</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Enhance dropdown items with icons.
            </p>
            <CodeBlock Code="@IconsCode" Language="razor" />
        </div>

        <!-- Placement Options -->
