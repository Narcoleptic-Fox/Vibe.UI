@page "/components/datepicker"

<PageTitle>DatePicker - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">DatePicker</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">DatePicker</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            An input component with a calendar popup for selecting dates with keyboard and mouse support.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-6 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900">
            <div class="flex flex-col gap-6 max-w-md mx-auto">
                <FormField TValue="DateTime?" Label="Select a date">
                    <DatePicker @bind-Date="@selectedDate"
                               MinDate="@DateTime.Today"
                               MaxDate="@DateTime.Today.AddMonths(6)"
                               Placeholder="Choose your date" />
                </FormField>

                @if (selectedDate.HasValue)
                {
                    <Alert Variant="AlertVariant.Success">
                        <strong>Date selected:</strong> @selectedDate.Value.ToString("dddd, MMMM dd, yyyy")
                    </Alert>
                }
            </div>
        </div>
    </section>

    <!-- Examples -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic DatePicker</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                A simple date picker with two-way binding.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- With Validation -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Validation</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Integrate with EditForm and data annotations for validation.
            </p>
            <CodeBlock Code="@ValidationCode" Language="razor" />
        </div>

        <!-- Date Range Limits -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Date Range Limits</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Restrict selectable dates with MinDate and MaxDate.
            </p>
            <CodeBlock Code="@LimitsCode" Language="razor" />
        </div>

        <!-- Custom Format -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Custom Format</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Display dates in different formats.
            </p>
            <CodeBlock Code="@FormatCode" Language="razor" />
        </div>

        <!-- In a Form -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">In a Form</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Use in a complete form with related date pickers.
            </p>
            <CodeBlock Code="@FormCode" Language="razor" />
        </div>
    </section>

