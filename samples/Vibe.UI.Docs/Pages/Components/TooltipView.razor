@page "/components/tooltip"
@using Vibe.UI.Components

<PageTitle>Tooltip - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">Tooltip</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">Tooltip</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            A brief, informative message that appears when hovering or focusing on an element.
        </p>
    </header>

    <!-- Preview -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-8 rounded-xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-zinc-900">
            <div class="flex gap-8 justify-center flex-wrap">
                <Tooltip Placement="top">
                    <TriggerContent>
                        <Button>Hover me (Top)</Button>
                    </TriggerContent>
                    <Content>
                        <span>This is a tooltip on top</span>
                    </Content>
                </Tooltip>

                <Tooltip Placement="bottom">
                    <TriggerContent>
                        <Button>Hover me (Bottom)</Button>
                    </TriggerContent>
                    <Content>
                        <span>This is a tooltip on bottom</span>
                    </Content>
                </Tooltip>

                <Tooltip Placement="left">
                    <TriggerContent>
                        <Button>Hover me (Left)</Button>
                    </TriggerContent>
                    <Content>
                        <span>This is a tooltip on left</span>
                    </Content>
                </Tooltip>

                <Tooltip Placement="right">
                    <TriggerContent>
                        <Button>Hover me (Right)</Button>
                    </TriggerContent>
                    <Content>
                        <span>This is a tooltip on right</span>
                    </Content>
                </Tooltip>
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Usage -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Usage</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Wrap any element with a tooltip to provide additional context on hover or focus.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- Placement Options -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Placement Options</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Control where the tooltip appears relative to the trigger element.
            </p>
            <CodeBlock Code="@PlacementCode" Language="razor" />
        </div>

        <!-- With Delay -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">With Delay</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Add delays before showing or hiding the tooltip.
            </p>
            <CodeBlock Code="@DelayCode" Language="razor" />
        </div>

        <!-- Rich Content -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Rich Content</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Include formatted content like bold text, icons, or multiple lines.
            </p>
            <CodeBlock Code="@RichCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-4">Properties</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead>
                        <tr class="border-b border-zinc-200 dark:border-zinc-700">
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Name</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Type</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Default</th>
                            <th class="text-left py-3 px-4 font-medium text-zinc-900 dark:text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Content</td>
                            <td class="py-3 px-4"><TypeBadge Type="string" /></td>
                            <td class="py-3 px-4 text-zinc-500">null</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Tooltip text content</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">Placement</td>
                            <td class="py-3 px-4"><TypeBadge Type="TooltipPlacement" /></td>
                            <td class="py-3 px-4 text-zinc-500">Top</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Tooltip placement (Top, Bottom, Left, Right)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ShowDelay</td>
                            <td class="py-3 px-4"><TypeBadge Type="int" /></td>
                            <td class="py-3 px-4 text-zinc-500">0</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Delay before showing (ms)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">HideDelay</td>
                            <td class="py-3 px-4"><TypeBadge Type="int" /></td>
                            <td class="py-3 px-4 text-zinc-500">0</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Delay before hiding (ms)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-mono text-sm text-zinc-900 dark:text-zinc-100">ShowArrow</td>
                            <td class="py-3 px-4"><TypeBadge Type="bool" /></td>
                            <td class="py-3 px-4 text-zinc-500">true</td>
                            <td class="py-3 px-4 text-zinc-600 dark:text-zinc-400">Show arrow pointing to element</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Installation</h2>
        <p class="text-zinc-600 dark:text-zinc-400 mb-4">
            Install the Tooltip component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add tooltip" Language="bash" />
    </section>

    <!-- Accessibility -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Accessibility</h2>
        <ul class="space-y-2 text-zinc-600 dark:text-zinc-400">
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Uses ARIA attributes for screen readers
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Keyboard accessible (focus triggers tooltip)
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Escape key dismisses tooltip
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <code class="text-sm bg-zinc-100 dark:bg-zinc-800 px-1 py-0.5 rounded">role="tooltip"</code> for semantics
            </li>
        </ul>
    </section>

    <!-- Related Components -->
    <section>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Related</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="/components/popover" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Popover</h4>
                <p class="text-sm text-zinc-500">Rich interactive content overlay</p>
            </a>
            <a href="/components/alert" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Alert</h4>
                <p class="text-sm text-zinc-500">Important messages display</p>
            </a>
            <a href="/components/badge" class="group p-4 rounded-lg border border-zinc-200 dark:border-zinc-700 hover:border-brand-teal dark:hover:border-brand-teal transition-colors">
                <h4 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:text-brand-teal">Badge</h4>
                <p class="text-sm text-zinc-500">Status and count indicators</p>
            </a>
        </div>
    </section>
</div>

@code {
    private string BasicCode => @"<Tooltip Content=""This is a tooltip"">
    <Button>Hover me</Button>
</Tooltip>

<Tooltip Content=""Additional information"">
    <span>Text with tooltip</span>
</Tooltip>";

    private string PlacementCode => @"<Tooltip Content=""Top"" Placement=""TooltipPlacement.Top"">
    <Button>Top</Button>
</Tooltip>

<Tooltip Content=""Bottom"" Placement=""TooltipPlacement.Bottom"">
    <Button>Bottom</Button>
</Tooltip>

<Tooltip Content=""Left"" Placement=""TooltipPlacement.Left"">
    <Button>Left</Button>
</Tooltip>

<Tooltip Content=""Right"" Placement=""TooltipPlacement.Right"">
    <Button>Right</Button>
</Tooltip>";

    private string DelayCode => @"<Tooltip Content=""Shows after 500ms"" ShowDelay=""500"">
    <Button>Delayed</Button>
</Tooltip>

<Tooltip Content=""Quick hide"" HideDelay=""100"">
    <Button>Quick Hide</Button>
</Tooltip>";

    private string RichCode => @"<Tooltip>
    <TooltipTrigger>
        <Button>Rich Tooltip</Button>
    </TooltipTrigger>
    <TooltipContent>
        <strong>Bold Title</strong>
        <p>Tooltip with <em>formatted</em> content.</p>
    </TooltipContent>
</Tooltip>";
}
