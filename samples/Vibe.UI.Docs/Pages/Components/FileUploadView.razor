@page "/components/fileupload"
@using Vibe.UI.Components
@using static Vibe.UI.Components.FileUpload

<PageTitle>FileUpload - Vibe.UI</PageTitle>

<div class="max-w-4xl">
    <!-- Header -->
    <header class="mb-8">
        <div class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
            <a href="/" class="hover:text-zinc-700 dark:hover:text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:text-zinc-700 dark:hover:text-zinc-300">Components</a>
            <span>/</span>
            <span class="text-zinc-900 dark:text-zinc-100">FileUpload</span>
        </div>
        <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-3">FileUpload</h1>
        <p class="text-lg text-zinc-600 dark:text-zinc-400">
            A file upload component with drag-and-drop support, file validation, and preview capabilities.
        </p>
    </header>

    <!-- Preview Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Preview</h2>
        <div class="p-8 bg-zinc-50 dark:bg-zinc-800/50 rounded-lg border border-zinc-200 dark:border-zinc-700">
            <div style="max-width: 500px; margin: 0 auto;">
                <FileUpload @bind-Files="uploadedFiles"
                            Multiple="true"
                            DropText="Drop files here or click to browse"
                            HintText="Upload documents, images, or PDFs" />
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">Examples</h2>

        <!-- Basic Upload -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Basic Upload</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Simple file upload with a single file selection.
            </p>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- Image Upload with Preview -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Image Upload with Preview</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Upload images with preview thumbnails and custom upload area.
            </p>
            <CodeBlock Code="@ImageCode" Language="razor" />
        </div>

        <!-- Multiple Files -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Multiple Files</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Allow multiple file selection with a maximum limit.
            </p>
            <CodeBlock Code="@MultipleCode" Language="razor" />
        </div>

        <!-- File Validation -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">File Validation</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Validate file types and sizes before upload.
            </p>
            <CodeBlock Code="@ValidationCode" Language="razor" />
        </div>

        <!-- Custom Upload Area -->
        <div class="mb-8">
            <h3 class="text-lg font-medium text-zinc-800 dark:text-zinc-200 mb-3">Custom Upload Area</h3>
            <p class="text-zinc-600 dark:text-zinc-400 mb-4">
                Customize the upload area with your own content.
            </p>
            <CodeBlock Code="@CustomCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">API Reference</h2>

