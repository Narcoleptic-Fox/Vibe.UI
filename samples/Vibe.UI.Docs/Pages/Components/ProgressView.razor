                </li>
                <li class="vibe-flex vibe-items-start vibe-gap-2">
                    <svg class="vibe-w-5 vibe-h-5 vibe-text-green-500 vibe-mt-0.5 vibe-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Screen reader announces progress updates
                </li>
            </ul>
        </div>
    </section>

    <!-- Related Components -->
    <section>
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-4">Related</h2>
        <div class="vibe-grid vibe-grid-cols-1 sm:vibe-grid-cols-3 vibe-gap-4">
            <a href="/components/spinner" class="vibe-group vibe-p-4 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 hover:vibe-border-brand-teal dark:hover:vibe-border-brand-teal vibe-transition-colors">
                <h4 class="vibe-font-medium vibe-text-zinc-900 dark:vibe-text-zinc-100 group-hover:vibe-text-brand-teal">Spinner</h4>
                <p class="vibe-text-sm vibe-text-zinc-500">Loading spinner indicator</p>
            </a>
            <a href="/components/skeleton" class="vibe-group vibe-p-4 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 hover:vibe-border-brand-teal dark:hover:vibe-border-brand-teal vibe-transition-colors">
                <h4 class="vibe-font-medium vibe-text-zinc-900 dark:vibe-text-zinc-100 group-hover:vibe-text-brand-teal">Skeleton</h4>
                <p class="vibe-text-sm vibe-text-zinc-500">Loading placeholder</p>
            </a>
            <a href="/components/loader" class="vibe-group vibe-p-4 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 hover:vibe-border-brand-teal dark:hover:vibe-border-brand-teal vibe-transition-colors">
                <h4 class="vibe-font-medium vibe-text-zinc-900 dark:vibe-text-zinc-100 group-hover:vibe-text-brand-teal">Loader</h4>
                <p class="vibe-text-sm vibe-text-zinc-500">Generic loader component</p>
            </a>
        </div>
    </section>
</div>

@code {
    private int progress = 65;

    private string BasicCode => @"<Progress Value=""50"" />
<Progress Value=""75"" />";

    private string LabelCode => @"<Progress Value=""@progress"" ShowLabel=""true"" />

@code {
    private double progress = 65;
}";

    private string IndeterminateCode => @"<Progress Indeterminate=""true"" />";

    private string StylesCode => @"<Progress Value=""60"" Size=""ProgressSize.Small"" />
<Progress Value=""60"" Size=""ProgressSize.Medium"" />
<Progress Value=""60"" Size=""ProgressSize.Large"" />

<Progress Value=""60"" Variant=""ProgressVariant.Success"" />
<Progress Value=""60"" Variant=""ProgressVariant.Warning"" />
<Progress Value=""60"" Variant=""ProgressVariant.Danger"" />";
}
