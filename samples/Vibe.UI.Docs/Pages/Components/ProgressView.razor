@page "/components/progress"
@using Vibe.UI.Components

<PageTitle>Progress - Vibe.UI</PageTitle>

<div class="vibe-max-w-4xl vibe-mx-auto">
    <!-- Header -->
    <header class="vibe-mb-8">
        <div class="vibe-flex vibe-items-center vibe-gap-2 vibe-text-sm vibe-text-zinc-500 vibe-mb-2">
            <a href="/" class="hover:vibe-text-zinc-700 dark:hover:vibe-text-zinc-300">Docs</a>
            <span>/</span>
            <a href="/components" class="hover:vibe-text-zinc-700 dark:hover:vibe-text-zinc-300">Components</a>
            <span>/</span>
            <span class="vibe-text-zinc-900 dark:vibe-text-zinc-100">Progress</span>
        </div>
        <h1 class="vibe-text-3xl vibe-font-bold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-3">Progress</h1>
        <p class="vibe-text-lg vibe-text-zinc-600 dark:vibe-text-zinc-400">
            Displays the progress of an operation or task.
        </p>
    </header>

    <!-- Preview -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-4">Preview</h2>
        <div class="vibe-flex vibe-flex-col vibe-gap-6 vibe-p-6 vibe-bg-zinc-50 dark:vibe-bg-zinc-800/50 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700">
            <div>
                <div class="vibe-mb-2 vibe-text-sm vibe-text-zinc-600 dark:vibe-text-zinc-400">25% Complete</div>
                <Progress Value="25" />
            </div>
            <div>
                <div class="vibe-mb-2 vibe-text-sm vibe-text-zinc-600 dark:vibe-text-zinc-400">50% Complete</div>
                <Progress Value="50" Variant="primary" />
            </div>
            <div>
                <div class="vibe-mb-2 vibe-text-sm vibe-text-zinc-600 dark:vibe-text-zinc-400">75% Complete</div>
                <Progress Value="75" Variant="success" />
            </div>
            <div>
                <div class="vibe-mb-2 vibe-text-sm vibe-text-zinc-600 dark:vibe-text-zinc-400">100% Complete</div>
                <Progress Value="100" Variant="success" />
            </div>
            <div>
                <div class="vibe-mb-2 vibe-text-sm vibe-text-zinc-600 dark:vibe-text-zinc-400">Loading...</div>
                <Progress IndeterminateAnimation="true" />
            </div>
        </div>
    </section>

    <!-- Examples Section -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-6">Examples</h2>

        <!-- Basic Usage -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Basic Usage</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                A simple progress bar showing task completion.
            </p>
            <div class="vibe-flex vibe-flex-col vibe-gap-4 vibe-p-6 vibe-bg-zinc-50 dark:vibe-bg-zinc-800/50 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 vibe-mb-3">
                <Progress Value="50" />
                <Progress Value="75" />
            </div>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <!-- With Label -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">With Label</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Display the current progress percentage as a label.
            </p>
            <div class="vibe-p-6 vibe-bg-zinc-50 dark:vibe-bg-zinc-800/50 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 vibe-mb-3">
                <Progress Value="@progress" ShowLabel="true" />
            </div>
            <CodeBlock Code="@LabelCode" Language="razor" />
        </div>

        <!-- Indeterminate -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Indeterminate</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Use indeterminate state when progress cannot be determined.
            </p>
            <div class="vibe-p-6 vibe-bg-zinc-50 dark:vibe-bg-zinc-800/50 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 vibe-mb-3">
                <Progress Indeterminate="true" />
            </div>
            <CodeBlock Code="@IndeterminateCode" Language="razor" />
        </div>

        <!-- Sizes and Colors -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-3">Sizes and Colors</h3>
            <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
                Different sizes and color variants to match your design.
            </p>
            <div class="vibe-flex vibe-flex-col vibe-gap-4 vibe-p-6 vibe-bg-zinc-50 dark:vibe-bg-zinc-800/50 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-700 vibe-mb-3">
                <div>
                    <div class="vibe-mb-2 vibe-text-xs vibe-text-zinc-500">Small</div>
                    <Progress Value="60" Size="ProgressSize.Small" />
                </div>
                <div>
                    <div class="vibe-mb-2 vibe-text-xs vibe-text-zinc-500">Medium</div>
                    <Progress Value="60" Size="ProgressSize.Medium" />
                </div>
                <div>
                    <div class="vibe-mb-2 vibe-text-xs vibe-text-zinc-500">Large</div>
                    <Progress Value="60" Size="ProgressSize.Large" />
                </div>
                <div class="vibe-pt-4 vibe-border-t vibe-border-zinc-200 dark:vibe-border-zinc-700">
                    <div class="vibe-mb-2 vibe-text-xs vibe-text-zinc-500">Success</div>
                    <Progress Value="60" Variant="ProgressVariant.Success" />
                </div>
                <div>
                    <div class="vibe-mb-2 vibe-text-xs vibe-text-zinc-500">Warning</div>
                    <Progress Value="60" Variant="ProgressVariant.Warning" />
                </div>
                <div>
                    <div class="vibe-mb-2 vibe-text-xs vibe-text-zinc-500">Danger</div>
                    <Progress Value="60" Variant="ProgressVariant.Danger" />
                </div>
            </div>
            <CodeBlock Code="@StylesCode" Language="razor" />
        </div>
    </section>

    <!-- API Reference -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-6">API Reference</h2>

        <!-- Properties -->
        <div class="vibe-mb-8">
            <h3 class="vibe-text-lg vibe-font-medium vibe-text-zinc-800 dark:vibe-text-zinc-200 vibe-mb-4">Properties</h3>
            <div class="vibe-overflow-x-auto">
                <table class="vibe-w-full vibe-text-sm">
                    <thead>
                        <tr class="vibe-border-b vibe-border-zinc-200 dark:vibe-border-zinc-700">
                            <th class="vibe-text-left vibe-py-3 vibe-px-4 vibe-font-medium vibe-text-zinc-900 dark:vibe-text-zinc-100">Name</th>
                            <th class="vibe-text-left vibe-py-3 vibe-px-4 vibe-font-medium vibe-text-zinc-900 dark:vibe-text-zinc-100">Type</th>
                            <th class="vibe-text-left vibe-py-3 vibe-px-4 vibe-font-medium vibe-text-zinc-900 dark:vibe-text-zinc-100">Default</th>
                            <th class="vibe-text-left vibe-py-3 vibe-px-4 vibe-font-medium vibe-text-zinc-900 dark:vibe-text-zinc-100">Description</th>
                        </tr>
                    </thead>
                    <tbody class="vibe-divide-y vibe-divide-zinc-100 dark:vibe-divide-zinc-800">
                        <tr>
                            <td class="vibe-py-3 vibe-px-4 vibe-font-mono vibe-text-sm vibe-text-zinc-900 dark:vibe-text-zinc-100">Value</td>
                            <td class="vibe-py-3 vibe-px-4"><TypeBadge Type="double" /></td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-500">0</td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-600 dark:vibe-text-zinc-400">Progress value (0-100)</td>
                        </tr>
                        <tr>
                            <td class="vibe-py-3 vibe-px-4 vibe-font-mono vibe-text-sm vibe-text-zinc-900 dark:vibe-text-zinc-100">Indeterminate</td>
                            <td class="vibe-py-3 vibe-px-4"><TypeBadge Type="bool" /></td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-500">false</td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-600 dark:vibe-text-zinc-400">Indeterminate loading state</td>
                        </tr>
                        <tr>
                            <td class="vibe-py-3 vibe-px-4 vibe-font-mono vibe-text-sm vibe-text-zinc-900 dark:vibe-text-zinc-100">ShowLabel</td>
                            <td class="vibe-py-3 vibe-px-4"><TypeBadge Type="bool" /></td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-500">false</td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-600 dark:vibe-text-zinc-400">Show percentage label</td>
                        </tr>
                        <tr>
                            <td class="vibe-py-3 vibe-px-4 vibe-font-mono vibe-text-sm vibe-text-zinc-900 dark:vibe-text-zinc-100">Size</td>
                            <td class="vibe-py-3 vibe-px-4"><TypeBadge Type="ProgressSize" /></td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-500">Medium</td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-600 dark:vibe-text-zinc-400">Progress bar size</td>
                        </tr>
                        <tr>
                            <td class="vibe-py-3 vibe-px-4 vibe-font-mono vibe-text-sm vibe-text-zinc-900 dark:vibe-text-zinc-100">Variant</td>
                            <td class="vibe-py-3 vibe-px-4"><TypeBadge Type="ProgressVariant" /></td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-500">Default</td>
                            <td class="vibe-py-3 vibe-px-4 vibe-text-zinc-600 dark:vibe-text-zinc-400">Color variant of the progress bar</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Installation -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-4">Installation</h2>
        <p class="vibe-text-zinc-600 dark:vibe-text-zinc-400 vibe-mb-4">
            Install the Progress component using the Vibe.UI CLI:
        </p>
        <CodeBlock Code="vibe add progress" Language="bash" />
    </section>

    <!-- Accessibility -->
    <section class="vibe-mb-12">
        <h2 class="vibe-text-xl vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 vibe-mb-4">Accessibility</h2>
        <div class="vibe-prose dark:vibe-prose-invert vibe-max-w-none">
            <ul class="vibe-space-y-2 vibe-text-zinc-600 dark:vibe-text-zinc-400">
                <li class="vibe-flex vibe-items-start vibe-gap-2">
                    <svg class="vibe-w-5 vibe-h-5 vibe-text-green-500 vibe-mt-0.5 vibe-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Uses <code class="vibe-text-sm vibe-bg-zinc-100 dark:vibe-bg-zinc-800 vibe-px-1 vibe-py-0.5 vibe-rounded">role="progressbar"</code>
                </li>
                <li class="vibe-flex vibe-items-start vibe-gap-2">
                    <svg class="vibe-w-5 vibe-h-5 vibe-text-green-500 vibe-mt-0.5 vibe-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
