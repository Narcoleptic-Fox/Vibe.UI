@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<ThemeProvider/>

<div class="vibe-min-h-screen vibe-flex vibe-flex-col">
    <!-- Top Navigation Bar -->
    <header class="vibe-sticky vibe-top-0 vibe-z-40 vibe-backdrop-blur-lg vibe-bg-white/80 dark:vibe-bg-zinc-950/80 vibe-border-b vibe-border-zinc-200 dark:vibe-border-zinc-800">
        <div class="vibe-max-w-screen-2xl vibe-mx-auto vibe-h-14 vibe-flex vibe-items-center vibe-justify-between vibe-px-4 lg:vibe-px-6">
            <!-- Left: Mobile menu + Logo -->
            <div class="vibe-flex vibe-items-center vibe-gap-4">
                <button class="lg:vibe-hidden vibe-p-2 vibe--ml-2 vibe-rounded-md hover:vibe-bg-zinc-100 dark:hover:vibe-bg-zinc-800 vibe-transition-colors"
                        @onclick="ToggleSidebar"
                        aria-label="Toggle menu">
                    @if (sidebarOpen)
                    {
                        <svg class="vibe-w-5 vibe-h-5 vibe-text-zinc-600 dark:vibe-text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="vibe-w-5 vibe-h-5 vibe-text-zinc-600 dark:vibe-text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    }
                </button>

                <a href="@GetBaseUrl()" class="vibe-flex vibe-items-center vibe-gap-2.5 vibe-font-semibold vibe-text-zinc-900 dark:vibe-text-zinc-100 hover:vibe-opacity-80 vibe-transition-opacity">
                    <img src="icon-192.png" alt="Vibe.UI" class="vibe-w-7 vibe-h-7 vibe-rounded-md" />
                    <span class="vibe-text-lg vibe-tracking-tight">Vibe.UI</span>
                </a>
            </div>

            <!-- Center: Search button (desktop) -->
            <button class="vibe-hidden md:vibe-flex vibe-items-center vibe-gap-2 vibe-px-3 vibe-py-1.5 vibe-w-64 vibe-rounded-lg vibe-border vibe-border-zinc-200 dark:vibe-border-zinc-800 vibe-bg-zinc-50 dark:vibe-bg-zinc-900 hover:vibe-bg-zinc-100 dark:hover:vibe-bg-zinc-800 vibe-transition-colors vibe-text-left"
                    @onclick="OpenSearch">
                <svg class="vibe-w-4 vibe-h-4 vibe-text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <span class="vibe-flex-1 vibe-text-sm vibe-text-zinc-400">Search components...</span>
                <span class="vibe-flex vibe-items-center vibe-gap-0.5">
                    <Kbd Size="Kbd.KbdSize.Small">Ctrl</Kbd>
                    <Kbd Size="Kbd.KbdSize.Small">K</Kbd>
                </span>
            </button>

            <!-- Right: Actions -->
            <div class="vibe-flex vibe-items-center vibe-gap-1">
                <!-- Mobile search button -->
                <button class="md:vibe-hidden vibe-p-2 vibe-rounded-md hover:vibe-bg-zinc-100 dark:hover:vibe-bg-zinc-800 vibe-transition-colors"
                        @onclick="OpenSearch"
                        aria-label="Search">
                    <svg class="vibe-w-5 vibe-h-5 vibe-text-zinc-600 dark:vibe-text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>

                <!-- GitHub -->
                <a href="https://github.com/AcademyKit/Vibe.UI"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="vibe-p-2 vibe-rounded-md hover:vibe-bg-zinc-100 dark:hover:vibe-bg-zinc-800 vibe-transition-colors"
                   title="View on GitHub">
                    <svg class="vibe-w-5 vibe-h-5 vibe-text-zinc-600 dark:vibe-text-zinc-400" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>

                <!-- Theme Toggle -->
                <ThemeToggle />
            </div>
        </div>
    </header>

    <!-- Main Container -->
    <div class="vibe-flex vibe-flex-1">
        <!-- Mobile Sidebar Backdrop -->
        @if (sidebarOpen)
        {
            <div class="lg:vibe-hidden vibe-fixed vibe-inset-0 vibe-z-40 vibe-bg-black/50"
                 @onclick="ToggleSidebar"
                 aria-hidden="true"></div>
        }

        <!-- Sidebar Navigation (mobile) -->
        <aside class="lg:vibe-hidden vibe-fixed vibe-inset-y-0 @(sidebarOpen ? "vibe-left-0" : "vibe-left-[-18rem]") vibe-z-50 vibe-w-72 vibe-overflow-y-auto vibe-bg-white dark:vibe-bg-zinc-950 vibe-border-r vibe-border-zinc-200 dark:vibe-border-zinc-800 vibe-transition-all vibe-duration-200">
            <nav class="vibe-p-4">
                <NavSidebar />
            </nav>
        </aside>

        <!-- Sidebar Navigation (desktop) -->
        <aside class="vibe-hidden lg:vibe-block vibe-border-r vibe-border-zinc-200 dark:vibe-border-zinc-800 vibe-w-72 vibe-sticky vibe-top-[3.5rem] vibe-h-[calc(100vh-3.5rem)] vibe-overflow-y-auto vibe-bg-white dark:vibe-bg-zinc-950">
            <nav class="vibe-p-4">
                <NavSidebar />
            </nav>
        </aside>

        <!-- Content Area -->
        <main class="vibe-flex-1 vibe-min-w-0">
            <div class="vibe-p-6 page-enter">
                @Body
            </div>
        </main>
    </div>

    <!-- Command Palette -->
    <CommandPalette IsOpen="searchOpen" IsOpenChanged="@((value) => { searchOpen = value; StateHasChanged(); })" OnThemeToggle="HandleThemeToggle" />

    <!-- Toast Container for notifications -->
    <ToastContainer Position="bottom-right" />
</div>

@code {
    private bool sidebarOpen = false;
    private bool searchOpen = false;
    private DotNetObjectReference<MainLayout>? _dotNetRef;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _dotNetRef = DotNetObjectReference.Create(this);

            await JS.InvokeVoidAsync("vibeDocs.registerHotkeys", _dotNetRef);
        }
    }

    [JSInvokable("OpenCommandPalette")]
    public void OpenCommandPalette()
    {
        searchOpen = true;
        StateHasChanged();
    }

    private void ToggleSidebar()
    {
        sidebarOpen = !sidebarOpen;
    }

    private void OpenSearch()
    {
        searchOpen = true;
    }

    private void CloseSearch()
    {
        searchOpen = false;
    }

    private async Task HandleThemeToggle()
    {
        // The ThemeToggle component handles the actual toggling
        // This callback is for when theme is toggled from CommandPalette
        await JS.InvokeVoidAsync("eval", @"
            const html = document.documentElement;
            html.classList.toggle('dark');
            localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
        ");
    }

    private string GetBaseUrl()
    {
        return Navigation.BaseUri;
    }

    public void Dispose()
    {
        JS.InvokeVoidAsync("vibeDocs.unregisterHotkeys");
        _dotNetRef?.Dispose();
    }
}
